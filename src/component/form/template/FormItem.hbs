<div
class="${prefix}form-item
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  {{#if label || hasSlot('label')}}

    <label
      class="${prefix}form-item-label
      {{#if showRequiredMark}} ${prefix}form-item-label-required{{/if}}"

      {{#if itemLabelWidth || labelAlign}}
        style="{{#if itemLabelWidth}}width: {{itemLabelWidth}}px;{{/if}}
        {{#if labelAlign}}vertical-align: {{labelAlign}};{{/if}}"
      {{/if}}
    >
      <slot name="label">
        {{label}}
      </slot>
    </label>

    <div class="${prefix}form-item-wrapper">

      <slot name="children" />

      {{#if showMessage && itemMessage}}
        <div class="${prefix}form-item-error">
          {{itemMessage}}
        </div>
      {{/if}}

    </div>

  {{else}}

    <div
      class="${prefix}form-item-wrapper"
      {{#if itemLabelWidth}}
        style="margin-left: {{itemLabelWidth}}px;"
      {{/if}}
    >
      <slot name="children" />

      {{#if showMessage && itemMessage}}
        <div class="${prefix}form-item-error">
          {{itemMessage}}
        </div>
      {{/if}}

    </div>

  {{/if}}


</div>