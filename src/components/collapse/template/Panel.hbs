<div
class="${prefix}collapse-item
{{#if opened}} ${prefix}collapse-item-open{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}} {{style}}{{/if}}
>

  <div class="${prefix}collapse-header" on-click="click()">
    <slot name="icon">
      {{#if showIcon}}
        <Icon
          name="arrow-down"
          className="${prefix}collapse-header-icon"
        />
      {{/if}}
    </slot>

    {{title}}

    {{#if hasSlot('extra')}}
      <div class="${prefix}collapse-header-extra">
        <slot name="extra"></slot>
      </div>
    {{/if}}
  </div>

  <div ref="content" class="${prefix}collapse-content">
    <div class="${prefix}collapse-content-box">
      <slot name="children" />
    </div>
  </div>

</div>