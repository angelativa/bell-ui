<div
class="${prefix}alert
{{#if type}} ${prefix}alert-{{type}}{{/if}}
{{#if icon || hasSlot('icon')}} ${prefix}alert-with-icon{{/if}}
{{#if hasSlot('content')}} ${prefix}alert-with-content{{/if}}
{{#if closable || hasSlot('close')}} ${prefix}alert-with-close{{/if}}
{{#if center}} ${prefix}alert-center{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  {{#if icon || hasSlot('icon')}}
    <span class="${prefix}alert-icon">
      <slot name="icon">
        <Icon
          name="{{
            type === RAW_TYPE_PRIMARY
            ? 'information-circle'
            : type === RAW_TYPE_SUCCESS
              ? 'checkmark-circle'
              : type === RAW_TYPE_WARNING
                ? 'alert'
                : type === RAW_TYPE_ERROR
                  ? 'close-circle'
                  : 'information-circle'
          }}"
          size="0"
          className="${prefix}alert-type-icon"
        />
      </slot>>
    </span>
  {{/if}}

  <div class="${prefix}alert-wrapper">

    {{#if hasSlot('children')}}
      <div class="${prefix}alert-title">
        <slot name="children" />
      </div>
    {{/if}}

    {{#if hasSlot('content')}}
      <div class="${prefix}alert-content">
        <slot name="content" />
      </div>
    {{/if}}

  </div>

  {{#if closable || hasSlot('close')}}
    <div ref="close" class="${prefix}alert-close" on-click="fire('close.alert')">
      <slot name="close">
        <Icon
          name="close"
          size="0"
          className="${prefix}alert-close-icon"
        />
      </slot>
    </div>
  {{/if}}

</div>