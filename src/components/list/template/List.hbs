<div class="${prefix}list
{{#if size}} ${prefix}list-{{size}}{{/if}}

{{#if simple}} ${prefix}list-simple
{{else}} ${prefix}list-bordered
{{/if}}

{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#partial empty}}
    <div class="${prefix}list-empty">
      <slot name="empty">
        <Empty>
          暂无数据
        </Empty>
      </slot>
    </div>
  {{/partial}}

  {{#if hasSlot('header')}}
    <div class="${prefix}list-header">
      <slot name="header" />
    </div>
    <div class="${prefix}list-body">
      <slot name="children">
        {{> empty}}
      </slot>
    </div>
  {{else}}
    <slot name="children">
      {{> empty}}
    </slot>
  {{/if}}

  {{#if loading}}
    <Spin size="large" fixed />
  {{/if}}

</div>