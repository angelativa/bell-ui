<div
class="${prefix}progress
{{#if type}} ${prefix}progress-{{type}}{{/if}}
{{#if active}} ${prefix}progress-active{{/if}}
{{#if vertical}} ${prefix}progress-vertical{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <div class="${prefix}progress-outer">
    <div
      class="${prefix}progress-inner"
      style="{{#if vertical}}width: {{thickness}}px;{{/if}}"
    >
      <div class="${prefix}progress-bg" style="
        {{#if !vertical}}
          width: {{percent}}%;
          height: {{thickness}}px;
        {{else}}
          height: {{percent}}%;
          width: {{thickness}}px;
        {{/if}}
      "></div>
    </div>
  </div>

  {{#if !hideInfo}}
    <span class="${prefix}progress-inner-text">
      <slot name="children">
        {{percent}}%
      </slot>
    </span>
  {{/if}}

</div>