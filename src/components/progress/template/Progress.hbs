<div
class="${prefix}progress
{{#if type}} ${prefix}progress-{{type}}{{/if}}
{{#if active}} ${prefix}progress-active{{/if}}
{{#if vertical}} ${prefix}progress-vertical
{{else}} ${prefix}progress-horizontal
{{/if}}
{{#if hasSlot('children')}} ${prefix}progress-with-text{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <div class="${prefix}progress-outer">
    <div
      class="${prefix}progress-inner"
      style="{{#if vertical}}width: {{thickness}}px;{{/if}}"
    >
      <div class="${prefix}progress-bar" style="
        {{#if !vertical}}
          width: {{percent}}%;
          height: {{thickness}}px;
        {{else}}
          height: {{percent}}%;
          width: {{thickness}}px;
        {{/if}}
      "></div>
    </div>
  </div>

  {{#if hasSlot('children')}}
    <div class="${prefix}progress-text">
      <slot name="children" />
    </div>
  {{/if}}

</div>