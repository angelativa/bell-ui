<div
class="${prefix}spinner
{{#if size}} ${prefix}spinner-{{size}}{{/if}}
{{#if type}} ${prefix}spinner-{{type}}{{/if}}
{{#if fix}} ${prefix}spinner-fix{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}} style="{{style}}"{{/if}}
>

  <slot name="children">
    <div class="${prefix}spinner-main">
      <span class="${prefix}spinner-dot"></span>
      {{#if text}}
        <span class="${prefix}spinner-text">
          {{text}}
        </span>
      {{/if}}
    </div>
  </slot>
</div>