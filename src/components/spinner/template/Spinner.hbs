<div
class="${prefix}spinner
{{#if type}} ${prefix}spinner-{{type}}{{/if}}
{{#if size}} ${prefix}spinner-{{size}}{{/if}}
{{#if fixed}} ${prefix}spinner-fixed{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot name="children">
    <div class="${prefix}spinner-content">
      <div class="${prefix}spinner-dot"></div>
      {{#if text}}
        <div class="${prefix}spinner-text">
          {{text}}
        </div>
      {{/if}}
    </div>
  </slot>
</div>