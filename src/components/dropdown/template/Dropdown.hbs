<div
class="${prefix}dropdown ${prefix}dropdown-{{placement}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  <div
    class="${prefix}dropdown-trigger"
    {{#if trigger === RAW_CLICK}}
      on-click="toggle('isOpen')"
    {{else if trigger === RAW_HOVER}}
      on-mouseenter="enter()"
      on-mouseleave="leave()"
    {{/if}}
  >
    <slot name="children" />
  </div>

  <div
    ref="list"
    class="${prefix}dropdown-list"
    {{#if height > 0}}
      style="max-height: {{height}}px;"
    {{/if}}

    {{#if trigger === RAW_HOVER}}
      on-mouseenter="enter()"
      on-mouseleave="leave()"
    {{/if}}
  >
    <slot name="list" />
  </div>

</div>