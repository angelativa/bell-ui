<div
class="${prefix}upload
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

on-click="click()"
>
  <slot />
  <form ref="form">
    <input
      ref="input"
      type="file"
      multiple="{{multiple}}"
      accept="{{accept}}"
      on-change="changeFiles()"
    >
  </form>
</div>