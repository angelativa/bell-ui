<div
class="${prefix}upload
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

on-click="click()"
>
  <slot name="children" />
  <input
    ref="input"
    type="file"
    multiple="{{multiple}}"
    accept="{{formatAccept(accept)}}"
    on-change="changeFiles()"
  >
</div>