<label
class="${prefix}radio

{{#if status}} ${prefix}radio-{{status}}{{/if}}
{{#if size}} ${prefix}radio-{{size}}{{/if}}

{{#if disabled}} ${prefix}radio-disabled
{{else}} ${prefix}radio-enabled
{{/if}}

{{#if checked}} ${prefix}radio-active{{/if}}
{{#if isFocus}} ${prefix}radio-focus{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

{{#if !disabled}}
  on-click="handleClick()"
{{/if}}
>

  <span class="${prefix}radio-icon">
    <input
      class="${prefix}radio-input"
      type="radio"
      {{#if name}}
        name="{{name}}"
      {{/if}}
      value="{{value}}"
      disabled="{{disabled}}"
      on-focus="handleFocus()"
      on-blur="handleBlur()"
    >
  </span>

  <slot name="children">
    {{label}}
  </slot>

</label>