<div
class="{{#if button}}${prefix}radio-button

  {{#if type}} ${prefix}radio-button-{{type}}
  {{/if}}

  {{#if size}} ${prefix}radio-button-{{size}}
  {{/if}}

  {{#if disabled}} ${prefix}radio-button-disabled
  {{else}} ${prefix}radio-button-enable
  {{/if}}

{{else}}${prefix}radio-group

  {{#if type}} ${prefix}radio-group-{{type}}
  {{/if}}

  {{#if size}} ${prefix}radio-group-{{size}}
  {{/if}}

  {{#if disabled}} ${prefix}radio-group-disabled
  {{else}} ${prefix}radio-group-enabled
  {{/if}}

{{/if}}

{{#if vertical}} ${prefix}radio-vertical{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot name="children" />
</div>