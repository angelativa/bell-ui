<div
class="{{#if button}}${prefix}radio-button{{else}}${prefix}radio-group{{/if}}

{{#if type}}
  {{#if button}} ${prefix}radio-button-{{type}}
  {{else}} ${prefix}radio-group-{{type}}
  {{/if}}
{{/if}}

{{#if size}}
  {{#if button}} ${prefix}radio-button-{{size}}
  {{else}} ${prefix}radio-group-{{size}}
  {{/if}}
{{/if}}

{{#if disabled && button}} ${prefix}radio-button-disabled
{{else if disabled}} ${prefix}radio-group-disabled
{{/if}}

{{#if vertical}} ${prefix}radio-vertical{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  <slot name="children" />
</div>