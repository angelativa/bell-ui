<label
class="${prefix}checkbox

{{#if type}} ${prefix}checkbox-{{type}}{{/if}}
{{#if size}} ${prefix}checkbox-{{size}}{{/if}}

{{#if disabled}} ${prefix}checkbox-disabled
{{else}} ${prefix}checkbox-enabled
{{/if}}

{{#if checked}} ${prefix}checkbox-active{{/if}}
{{#if isFocus}} ${prefix}checkbox-focus{{/if}}
{{#if indeterminate}} ${prefix}checkbox-indeterminate{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  <span class="${prefix}checkbox-icon">
    <input
      class="${prefix}checkbox-input"
      type="checkbox"
      model="checked"
      name="{{name}}"
      disabled="{{disabled}}"
      on-focus="handleFocus()"
      on-blur="handleBlur()"
    >
  </span>

  <slot name="children">
    {{label}}
  </slot>

</label>