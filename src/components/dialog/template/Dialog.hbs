<div
class="${prefix}dialog
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#if mask}}
    <div
      class="${prefix}dialog-mask"
      {{#if maskClosable}}
        on-click="close()"
      {{/if}}
    >
    </div>
  {{/if}}

  <div
    ref="wrapper"
    class="${prefix}dialog-wrapper"
    {{#if width}}
      style="width:{{width}}px"
    {{/if}}
  >
    <div class="${prefix}dialog-title">

      {{#if title}}
        <slot name="title">
          {{title}}
        </slot>
      {{/if}}

      {{#if closable}}
        <div class="${prefix}dialog-close" on-click="close()">
          <Icon
            name="close"
            size="0"
            className="${prefix}dialog-close-icon"
          />
        </div>
      {{/if}}
    </div>

    {{#if hasSlot('children')}}
      <div class="${prefix}dialog-content">
        <slot name="children" />
      </div>
    {{/if}}

    {{#if hasSlot('actions')}}
      <div class="${prefix}dialog-actions">
        <slot name="actions" />
      </div>
    {{/if}}
  </div>
</div>