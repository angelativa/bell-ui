<span
class="${prefix}breadcrumb-item
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#partial content}}
    {{#if hasSlot('icon')}}
      <span class="${prefix}breadcrumb-icon">
        <slot name="icon" />
      </span>
    {{/if}}
    <slot name="children" />
  {{/partial}}

  {{#if href && !last}}
    <a
      class="${prefix}breadcrumb-link"
      href="{{href}}"
      {{#if target}}
        target="{{target}}"
      {{/if}}
    >
      {{> content}}
    </a>
  {{else}}
    <span
      {{#if last}}
        class="${prefix}breadcrumb-text"
      {{else}}
        class="${prefix}breadcrumb-link"
        on-click="click.breadcrumbItem"
      {{/if}}
    >
      {{> content}}
    </span>
  {{/if}}

  {{#if !last}}
    <span class="${prefix}breadcrumb-separator">
      {{separator}}
    </span>
  {{/if}}

</span>