<div
class="${prefix}submenu
{{#if isOpen}} ${prefix}menu-open{{/if}}
{{#if isActive}} ${prefix}menu-active{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

{{#if collapsed}}
  on-mouseenter="set('isOpen', true)"
  on-mouseleave="set('isOpen', false)"
  lazy-mouseleave="300"
{{/if}}
>
  <div class="${prefix}submenu-title" on-click="handleClick()">
    <slot name="title" />
    {{#if !collapsed}}
      <Icon name="arrow-down" className="${prefix}submenu-title-icon" />
    {{/if}}
  </div>

  {{#if mode !== 'inline'}}
    <div ref="menu" class="${prefix}menu-dropdown">
      <slot name="children" />
    </div>
  {{else}}
    <Menu ref="menu" mode="{{mode}}" theme="">
      <slot name="children" />
    </Menu>
  {{/if}}
</div>