<div
class="${prefix}page
{{#if size}} ${prefix}page-{{size}}{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}} style="{{style}}"{{/if}}
>
  {{#partial pageCenter}}
    {{#if current - 5 >= 1}}
      <li class="${prefix}page-item ${prefix}page-item-prev" on-click="fastPrev()">
        <Icon name="arrow-back" />
        <Icon name="arrow-back" />
      </li>
    {{else}}
      {{#if current - 3 > 1}}
        <li class="${prefix}page-item" on-click="changePage(current - 3)">
          {{ current - 3 }}
        </li>
      {{/if}}
      {{#if current - 4 > 1}}
        <li class="${prefix}page-item" on-click="changePage(current - 4)">
          {{ current - 4 }}
        </li>
      {{/if}}
    {{/if}}

    {{#if current - 2 > 1}}
      <li class="${prefix}page-item" on-click="changePage(current - 2)">
        {{ current - 2 }}
      </li>
    {{/if}}

    {{#if current - 1 > 1}}
      <li class="${prefix}page-item" on-click="changePage(current - 1)">
        {{ current - 1 }}
      </li>
    {{/if}}

    {{#if current != 1 && current != count}}
      <li class="${prefix}page-item ${prefix}active">
        {{ current }}
      </li>
    {{/if}}

    {{#if current + 1 < count}}
      <li class="${prefix}page-item" on-click="changePage(current + 1)">
        {{ current + 1 }}
      </li>
    {{/if}}

    {{#if current + 2 < count}}
      <li class="${prefix}page-item" on-click="changePage(current + 2)">
        {{ current + 2 }}
      </li>
    {{/if}}

    {{#if current + 5 <= count}}
      <li class="${prefix}page-item ${prefix}page-item-next" on-click="fastNext()">
        <Icon name="arrow-forward" />
        <Icon name="arrow-forward" />
      </li>
    {{else}}
      {{#if current + 3 < count}}
        <li class="${prefix}page-item" on-click="changePage(current + 3)">
          {{ current + 3 }}
        </li>
      {{/if}}

      {{#if current + 4 < count}}
        <li class="${prefix}page-item" on-click="changePage(current + 4)">
          {{ current + 4 }}
        </li>
      {{/if}}
    {{/if}}
  {{/partial}}

  {{#if showTotal}}
    <span class="${prefix}page-total">
      共 {{total}} 条
    </span>
  {{/if}}

  {{#if showSizer}}
    <div class="${prefix}page-select">
      <Select
        model="pageSize"
        size="{{size}}"
        placement="{{placement}}"
        on-change="pageSizeChange()"
      >
        {{#each pageList:index}}
          <Option index="{{index}}" value="{{value}}" text="{{text}}">
            {{text}}
          </Option>
        {{/each}}
      </Select>
    </div>
  {{/if}}

  {{#if !simple}}
    <ul class="${prefix}page-list">

      <li
        class="${prefix}page-item ${prefix}page-prev
          {{#if prevText}} ${prefix}page-custom-prev{{/if}}
          {{#if current <= 1}} ${prefix}disabled{{/if}}
        "
        on-click="prev()"
      >
        {{#if prevText}}
          {{prevText}}
        {{else}}
          <Icon name="arrow-back" />
        {{/if}}
      </li>

      <li
        class="${prefix}page-item
        {{#if current == 1}} ${prefix}active{{/if}}"
        on-click="changePage(1)"
      >
        1
      </li>

      {{#if count > 1}}
        {{> pageCenter}}
        <li
          class="${prefix}page-item
          {{#if current == count}} ${prefix}active{{/if}}"
          on-click="changePage(count)"
        >
          {{count}}
        </li>
      {{/if}}

      <li
        class="${prefix}page-item ${prefix}page-next
          {{#if nextText}} ${prefix}page-custom-next{{/if}}
          {{#if current >= count}} ${prefix}disabled{{/if}}
        "
        on-click="next()"
      >
        {{#if nextText}}
          {{nextText}}
        {{else}}
          <Icon name="arrow-forward" />
        {{/if}}
      </li>
    </ul>

  {{else}}
    <div class="${prefix}page-simple">
      <span
        class="${prefix}page-item ${prefix}page-prev
          {{#if prevText}} ${prefix}page-custom-prev{{/if}}
          {{#if current <= 1}} ${prefix}disabled{{/if}}
        "
        on-click="prev()"
      >
        {{#if prevText}}
          {{prevText}}
        {{else}}
          <Icon name="arrow-back" />
        {{/if}}
      </span>

      <div class="${prefix}page-input">
        <Input type="input"
          size="small"
          model="currentPage"
        ></Input>
      </div>

      <span
        class="${prefix}page-item
        {{#if current == count}} ${prefix}active{{/if}}"
        on-click="changePage(count)"
      >
        <span class="${prefix}page-gap">
          /
        </span>
        {{count}}
      </span>

      <span
        class="${prefix}page-item ${prefix}page-next
          {{#if nextText}} ${prefix}page-custom-next{{/if}}
          {{#if current >= count}} ${prefix}disabled{{/if}}
        "
        on-click="next()"
      >
        {{#if nextText}}
          {{nextText}}
        {{else}}
          <Icon name="arrow-forward" />
        {{/if}}
      </span>
    </div>
  {{/if}}

  {{#if showElevator}}
    <div class="${prefix}page-elevator">
      <div class="${prefix}page-input">
        <Input
          type="input"
          placeholder="请输入页码"
          model="elevatorPage"
          size="{{size}}"
        />
      </div>
      <Button
        type="primary"
        on-click="elevator()"
      >
        跳转
      </Button>
    </div>
  {{/if}}

</div>