<div
class="${prefix}rate
{{#if type}} ${prefix}rate-{{type}}{{/if}}
{{#if readOnly}} ${prefix}rate-readonly{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}

{{#if !readOnly}}
  on-mouseleave="handleLeave()"
{{/if}}
>
  <input type="hidden" model="value">

  {{#each 1 => count}}
    <Icon
      name="{{icon}}"
      size="{{20}}"
      className="${prefix}rate-star-full
      {{#if activeValue - this >= 0}} active{{/if}}"

      {{#if !readOnly}}
        on-mousemove.native="handleMove($event, this)"
        on-click.native="handleClick($event, this)"
      {{/if}}
    >
      {{#if half}}
        <i
          data-half="1"
          class="${prefix}icon ${prefix}rate-star-content ${prefix}icon-ios-star-half
          {{#if activeValue - this >= -0.5}} active{{/if}}"
        >
        </i>
      {{/if}}
    </Icon>
  {{/each}}

  {{#if showTexts}}
    <span class="${prefix}rate-text">
      <slot name="children">
        {{#if texts}}
          {{texts[activeValue - 1]}}
        {{else}}
          {{value}} æ˜Ÿ
        {{/if}}
      </slot>
    </span>
  {{/if}}

</div>