<div
class="${prefix}drawer ${prefix}drawer-{{placement}}

{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#if mask}}
    <div
      class="${prefix}drawer-mask"
      {{#if maskClosable}}
        on-click="set('open', FALSE)"
      {{/if}}
    ></div>
  {{/if}}

  <div
    class="${prefix}drawer-content"
    style="{{contentStyle}}"
  >
    {{#if title || hasSlot('title')}}
      <div class="${prefix}drawer-header">
        <div class="${prefix}drawer-title">
          <slot name="title">
            {{title}}
          </slot>
        </div>
      </div>
    {{/if}}

    <div class="${prefix}drawer-body">
      <slot name="children" />
    </div>

    {{#if closable}}
      <Button
        className="${prefix}drawer-close"
        size="small"
        border="none"
        on-click="set('open', FALSE)"
      >
        <Icon
          slot="icon"
          size="28"
          name="close"
        />
      </Button>
    {{/if}}
  </div>

</div>