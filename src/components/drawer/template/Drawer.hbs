<div
class="${prefix}drawer ${prefix}drawer-{{placement}}

{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>

  {{#if mask}}
    <div
      class="${prefix}drawer-mask"
      {{#if maskClosable}}
        on-click="set('open', FALSE)"
      {{/if}}
    ></div>
  {{/if}}

  <div
    class="${prefix}drawer-wrapper"
    style="{{wrapperStyle}}"
  >
    {{#if title || hasSlot('title')}}
      <div class="${prefix}drawer-header">
        <slot name="title">
          {{title}}
        </slot>
      </div>
    {{/if}}

    <div class="${prefix}drawer-body">
      <slot name="children" />
    </div>

    {{#if closable}}
      <div class="${prefix}drawer-close" on-click="set('open', FALSE)">
        <Icon name="close" size="0" />
      </div>
    {{/if}}
  </div>

</div>