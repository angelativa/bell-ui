<div
class="${prefix}avatar
{{#if size}} ${prefix}avatar-{{size}}{{/if}}
{{#if shape}} ${prefix}avatar-{{shape}}{{/if}}
{{#if className}} {{className}}{{/if}}"

{{#if text || fontSize || backgroundColor || style}}
  style="{{#if text}}color: {{color}};{{/if}}
  {{#if fontSize}}font-size: {{fontSize}}px;{{/if}}
  {{#if backgroundColor}}background-color: {{backgroundColor}};{{/if}}
  {{#if style}}{{style}}{{/if}}"
{{/if}}
>

  {{#if src}}
    <img
      class="${prefix}avatar-image"
      src="{{src}}"
      {{#if srcset}}
        srcset="{{srcset}}"
      {{/if}}
      loading="lazy"
      ondragstart="return false"
    >
  {{else if hasSlot('icon')}}
    <span class="${prefix}avatar-icon">
      <slot name="icon" />
    </span>
  {{else if text}}
    <span
      ref="text"
      class="${prefix}avatar-text"
    >
      {{text}}
    </span>
  {{/if}}

</div>