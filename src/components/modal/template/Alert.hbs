<Dialog
  mask
  ref="dialog"
  width="{{width}}"
  maskClosable="{{false}}"
  closable="{{closable}}"
  className="${prefix}modal"
>

  <template slot="title">
    {{title}}
  </template>

  <template slot="content">
    {{content}}
  </template>

  <Button
    slot="footer"
    type="{{okType}}"
    on-click="ok()"
  >
    {{okText}}
  </Button>

</Dialog>
