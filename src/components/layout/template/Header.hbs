<div class="${prefix}layout-header
{{#if className}} {{className}}{{/if}}"

{{#if style}}
  style="{{style}}"
{{/if}}
>
  {{#if hasSlot("children")}}
    <slot name="children" />
  {{else}}
    <div class="${prefix}layout-header-left">
      <slot name="left" />
    </div>

    <div class="${prefix}layout-header-center">
      <slot name="center" />
    </div>

    <div class="${prefix}layout-header-right">
      <slot name="right" />
    </div>
  {{/if}}
</div>