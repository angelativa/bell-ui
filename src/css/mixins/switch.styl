switch-size-style(size)
  ui-set('width', size['width'])
  ui-set('height', size['height'])

  &{$selector-switch-active}
    &:before
      ui-set('margin-left', - (size['height'] - 4) - $switch-thumb-gap)

    &:after
      ui-set('margin-left', - (size['height'] - 8) - $switch-loading-gap)

  &:before
    ui-set('width', size['height'] - 4)
    ui-set('height', size['height'] - 4)

  &:after
    ui-set('width', size['height'] - 8)
    ui-set('height', size['height'] - 8)

  > {$selector-switch-label}
    ui-set('line-height', size['height'])
    ui-set('height', size['height'])

switch-brand-style(style)
  &:after
    ui-set('border-left-color', style['color'])

  &{$selector-switch-active}
    ui-set('background-color', style['color'])

ui-switch()
  ui-connect(
    hash: $switch-size-hash,
    each: switch-size-style
  )
  ui-connect(
    hash: $switch-brand-hash,
    each: switch-brand-style
  )
