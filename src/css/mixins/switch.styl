switch-size-style(size)
  ui-set('height', size[ 'height' ])
  ui-set('width', size[ 'width' ])
  ui-set('border-radius', size[ 'height' ])

  &{$selector-active}
    {$selector-switch-button}
      &:after
        ui-set('margin-left', - size[ 'after-size' ] - 1)

  {$selector-switch-button}
    ui-set('height', size[ 'height' ] - 2)

    {$selector-switch}-inner
      ui-set('line-height', size[ 'height' ] - 2)
      ui-set('height', size[ 'height' ] - 2)
      ui-set('left', size[ 'height' ])

    &:after
      ui-set('width', size[ 'after-size' ])
      ui-set('height', size[ 'after-size' ])

  &{$selector-switch}-loading
    {$selector-switch-button}
      &:before
        ui-set('width', size[ 'after-size' ] - 6)
        ui-set('height', size[ 'after-size' ] - 6)

    &{$selector-active}
      {$selector-switch-button}
        &:before
          ui-set('left', size[ 'before-left' ])
        
switch-brand-style(style)

  &{$selector-switch}-loading
    {$selector-switch-button}
      &:before
        ui-set('border-left-color', style[ 'active-color' ])
        
  &{$selector-active}
    ui-set('background-color', style[ 'active-color' ])
    ui-set('border-color', style[ 'active-color' ])

ui-switch()
  ui-connect(
    hash: $switch-size-hash,
    each: switch-size-style
  )

  ui-connect(
    hash: $switch-brand-hash,
    each: switch-brand-style
  )
