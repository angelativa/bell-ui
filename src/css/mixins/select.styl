select-size-style(size)

  > {$selector-select-button}
    ui-set('font-size', size['font-size'])
    ui-set('height', size['height'])
    ui-set('line-height', size['height'])

  {$selector-select-prefix}
    ui-set('height', size['height'] - 2)
    ui-set('line-height', size['height'] - 2)

  {$selector-dropdown-item},
  {$selector-select-option-title}
    ui-set('font-size', size['font-size'])

  {$selector-dropdown-item}
    ui-set('padding', size['option-padding'])

  {$selector-select-option-title}
    ui-set('padding', size['group-padding'])

ui-select()
  ui-connect(
    hash: $select-size-hash,
    each: select-size-style
  )