select-style(size)
    {$selector-select}-button
        ui-set('height', size['height'])
        ui-set('line-height', size['height'])

        {$selector-select}-value,
        {$selector-select}-placeholder

            ui-set('height', size['height'])
            ui-set('line-height', size['height'])
            ui-set('font-size', size['font'])
            ui-set('padding', size['value-padding'])

    {$selector-select}-dropdown
        ui-set('max-height', size['max-height'])
        ui-set('top', size['height'] + 2)

        {$selector-select}-dropdown-list
            ui-set('padding', size['list-padding'])

            {$selector-select}-dropdown-item
                ui-set('padding', size['item-padding'])
                ui-set('font-size', size['font'])

    &{$selector-select}-top
        {$selector-select}-dropdown

            ui-set('bottom', size['dropdown-bottom'])


ui-select()

    ui-connect(
        hash: $select-size-hash,
        each: select-style
    )