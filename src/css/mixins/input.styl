input-size(size)
  {$selector-input}-prepend,
  {$selector-input}-append
    ui-set('height', size)
    ui-set('line-height', size)

    {$selector-button}
      ui-set('height', size + 2)

  {$selector-input}-prefix,
  {$selector-input}-suffix 
    ui-set('width', size)
    ui-set('height', size)

    {$selector-input}-prefix-icon,
    {$selector-input}-suffix-icon
      ui-set('line-height', size)

  {$selector-input}
    {$selector-input-el}
      ui-set('height', size)
      ui-set('line-height', size)

      &{$selector-input}-with-prefix
        ui-set('padding-left', size - 15)
        
      &{$selector-input}-with-suffix 
        ui-set('padding-right', size - 15)

  &{$selector-input-wrapper}-clearable
    {$selector-input}-clear-icon
      ui-set('height', size)
      ui-set('width', size)
      ui-set('line-height', size)

    {$selector-input-el}
      ui-set('padding-right', size - 15)

input-inner-color(color)
  {$selector-input}-prepend,
  {$selector-input}-append
    ui-set('border-color', color[ 'border-color' ])

  {$selector-input}
    ui-set('border-color', color[ 'border-color' ])
    ui-set('background-color', color[ 'bg-color' ])

    {$selector-input}-el
      ui-set('color', color[ 'color' ])

  &{$selector-hover}
    {$selector-input}
      ui-set('border-color', color[ 'border-hover-color' ])

  &{$selector-prefix}-focus
    {$selector-input}
      ui-set('border-color', color[ 'border-hover-color' ])
      ui-set('box-shadow', color[ 'box-shadow' ])

ui-input()
  ui-connect(
    hash: $input-size-hash,
    each: input-size
  )
  ui-connect(
    hash: $input-color-hash,
    each: input-inner-color
  )

