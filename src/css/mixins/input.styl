input-size-style(style)

  > {$selector-input-prepend},
  > {$selector-input-append}
  > {$selector-input-content}
    ui-set('height', style['height'])

  {$selector-input-prefix},
  {$selector-input-suffix}
    ui-set('width', style['height'] - 2)
    ui-set('height', style['height'] - 2)
    ui-set('line-height', style['height'] - 2)

  {$selector-input-el-with-prefix}
    ui-set('padding-left', style['height'] - 2)

  {$selector-input-el-with-suffix}
    ui-set('padding-right', style['height'] - 2)

input-brand-style(color)
  > {$selector-input-content}
    ui-set('border-color', color)

ui-input()
  ui-connect(
    hash: $input-size-hash,
    each: input-size-style
  )
  ui-connect(
    hash: $input-brand-hash,
    each: input-brand-style
  )

