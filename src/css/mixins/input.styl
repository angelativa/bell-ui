input-single-line-size-style(style)

  > {$selector-input-prepend},
  > {$selector-input-append},
  {$selector-input-el}
    ui-set('height', style['height'])

  > {$selector-input-prepend},
  > {$selector-input-append}
    ui-set('min-width', style['height'])

  {$selector-input-prefix}
    ui-set('left', style['padding-horizontal'])

  {$selector-input-suffix}
    ui-set('right', style['padding-horizontal'])

  {$selector-input-el-with-prefix}
    ui-set('padding-left', style['padding-horizontal'] + $ui-icon-size + $ui-icon-text-gap)

  {$selector-input-el-with-suffix}
    ui-set('padding-right', style['padding-horizontal'] + $ui-icon-size + $ui-icon-text-gap)

input-border-style($selector, $color, $shadow-color)
  {$selector}
    ui-set('border-color', $color)

    &:focus
      ui-set('border-color', $color)
      if $ui-shadow-radius > 0
        box-shadow 0 0 0 $ui-shadow-radius $shadow-color


