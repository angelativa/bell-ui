radio-group-style(style)
  {$selector-radio}

    &{$selector-active}
      {$selector-radio}-inner
        ui-set('border-color', style[ 'hover-color' ])
        ui-set('box-shadow', style[ 'box-shadow' ])

        &:after
          ui-set('background-color', style[ 'active-color' ])

    {$selector-radio}-inner
      ui-set('background-color', style[ 'bg-color' ])

      &:after
        ui-set('background-color', style[ 'bg-color' ])

    &{$selector-hover}
      {$selector-radio}-inner
        ui-set('border-color', style[ 'hover-color' ])

ui-radio-group()
  ui-connect(
    hash: $radio-brand-hash,
    each: radio-group-style
  )