
radio-brand-style(style)
  &{$selector-radio-active}
    > {$selector-radio-icon}
      ui-set('border-color', style['color'])

  > {$selector-radio-icon}:after
    ui-set('background-color', style['color'])

  if $ui-shadow-radius > 0
    &{$selector-radio-enabled}
      &:hover
      &{$selector-radio-focus}
        > {$selector-radio-icon}
          box-shadow 0 0 0 $ui-shadow-radius style['shadow-color']

radio-size-style(style)
  ui-set('font-size', style['font-size'])
  ui-set('padding-left', style['font-size'] + $ui-icon-text-gap)

  > {$selector-radio-icon}
    ui-set('width', style['font-size'])
    ui-set('height', style['font-size'])
    ui-set('margin-top', -0.5 * style['font-size'])

    &:after
      ui-set('width', style['font-size'] - 6)
      ui-set('height', style['font-size'] - 6)
      ui-set('margin-top', -0.5 * (style['font-size'] - 6))
      ui-set('margin-left', -0.5 * (style['font-size'] - 6))

radio-group-brand-style(style)
  > {$selector-radio}
    radio-brand-style(style)

radio-group-size-style(style)
  > {$selector-radio}
    radio-size-style(style)

radio-single-brand-style(style)
  &{$selector-radio}
    radio-brand-style(style)

ui-radio-group()
  ui-connect(
    hash: $radio-brand-hash,
    each: radio-group-brand-style
  )
  ui-connect(
    hash: $radio-size-hash,
    each: radio-group-size-style
  )

ui-radio()
  ui-connect(
    hash: $radio-brand-hash,
    each: radio-single-brand-style
  )
  ui-connect(
    hash: $radio-size-hash,
    each: radio-size-style
  )
