checkbox-brand-style(color, shadow-color)
  &{$selector-checkbox-active},
  &{$selector-checkbox-indeterminate},
  &{$selector-checkbox-active}:hover,
  &{$selector-checkbox-indeterminate}:hover
    > {$selector-checkbox-icon}
      ui-set('background-color', color)
      ui-set('border-color', color)

  if $ui-shadow-radius > 0
    &{$selector-checkbox-enabled}:hover > {$selector-checkbox-icon},
    &{$selector-checkbox-focus} > {$selector-checkbox-icon}
      box-shadow 0 0 0 $ui-shadow-radius shadow-color

checkbox-size-style(style)
  ui-set('font-size', style['font-size'])
  ui-set('padding-left', style['font-size'] + $ui-icon-text-gap)

  > {$selector-checkbox-icon}
    ui-set('width', style['font-size'])
    ui-set('height', style['font-size'])
    ui-set('margin-top', -0.5 * style['font-size'])

  > {$selector-checkbox-icon}:after
      ui-set('top', style['icon-top'])
      ui-set('left', style['icon-left'])
      ui-set('width', style['icon-width'])
      ui-set('height', style['icon-height'])

  &{$selector-checkbox-indeterminate}
    > {$selector-checkbox-icon}:after
      ui-set('top', style['indeterminate-top'])
      ui-set('left', style['indeterminate-left'])
      ui-set('width', style['indeterminate-width'])

ui-checkbox()
  ui-connect(
    hash: $checkbox-brand-hash,
    each: @(style) {
      checkbox-brand-style(style['color'], style['shadow-color'])
    }
  )
  ui-connect(
    hash: $checkbox-size-hash,
    each: checkbox-size-style
  )
