radio-button-group-brand-style(style)
  > {$selector-radio-enabled}
    ui-set('background-color', style['bg-color'])
    ui-set('color', style['color'])

    &:hover
      ui-set('color', style['color-hover'])

    &{$selector-radio-active}
      ui-set('border-color', style['color-active'])
      ui-set('color', style['color-active'])

      if $ui-shadow-radius > 0
        box-shadow -1px 0 0 $ui-shadow-radius style['shadow-color'],
                    0 0 0 $ui-shadow-radius style['shadow-color']

      &:before
        ui-set('background-color', style['color-active'])

radio-button-group-size-style(size)
  > {$selector-radio}
    ui-set('font-size', size['font-size'])
    ui-set('padding', 0 size['padding-horizontal'])
    ui-set('height', size['height'])
    ui-set('min-width', size['height'])
    ui-set('line-height', size['height'])

ui-radio-button-group()
  ui-connect(
    hash: $radio-button-brand-hash,
    each: radio-button-group-brand-style
  )
  ui-connect(
    hash: $radio-button-size-hash,
    each: radio-button-group-size-style
  )