input-number-size-style(style)
  ui-set('height', style['height'])

  > {$selector-input-number-el}
    ui-set('font-size', style['font-size'])

input-number-brand-style(style)
  &{$selector-input-number-enabled}

    &:hover,
    &{$selector-input-number-focus}
      ui-set('border-color', style['hover-color'])

    if $ui-shadow-radius > 0
      &{$selector-input-number-focus}
        box-shadow 0 0 0 $ui-shadow-radius style[ 'shadow-color' ]

    {$selector-input-number-up}-enabled,
    {$selector-input-number-down}-enabled
      &:hover
        ui-set('color', style['hover-color'])


ui-input-number()
  ui-connect(
    hash: $input-number-size-hash,
    each: input-number-size-style
  )
  ui-connect(
    hash: $input-number-brand-hash,
    each: input-number-brand-style
  )

