button-size(size)
  ui-set('border-radius', size['border-radius'])
  ui-set('font-size', size['font'])
  ui-set('height', size['height'])
  ui-set('padding-left', size['padding-horizontal'])
  ui-set('padding-right', size['padding-horizontal'])

button-color(color, bg, borderColor)
  ui-set('color', color)
  ui-set('border-color', borderColor)
  ui-set('background-color', bg)

button-border(border)
  ui-set('border-style', border)

  // 为 group 准备的
  &:before
    ui-set('border-style', border)

button-circle-size(size)
  ui-set('width', size)
  ui-set('height', size)

button-brand-style(style)
  button-color(
    style['color'],
    style['bg-color'],
    style['border-color']
  )

  &:active
    button-color(
      style['active-color'],
      style['active-bg-color'],
      style['active-border-color']
    )

  &{$selector-button-enabled}
    &:hover
      button-color(
        style['hover-color'],
        style['hover-bg-color'],
        style['hover-border-color']
      )

    if $ui-shadow-radius > 0
      &:focus
        box-shadow 0 0 0 $ui-shadow-radius style[ 'shadow-color' ]

    // 为 group 准备的
    &:hover:before
      ui-set('border-color', style['hover-border-color'])

    &:active:before
      ui-set('border-color', style['active-border-color'])

button-group-size(size)
  > {$selector-button}
    button-size(size)

button-group-round-size(size)
  > {$selector-button}

    &:first-child:not(:last-child)
      ui-set('border-top-left-radius', size)
      ui-set('border-bottom-left-radius', size)

    &:last-child:not(:first-child)
      ui-set('border-top-right-radius', size)
      ui-set('border-bottom-right-radius', size)

ui-button-ghost-brand()
  ui-connect(
    hash: $button-ghost-hash,
    each: button-brand-style
  )

ui-button()
  ui-connect(
    hash: $button-size-hash,
    each: button-size
  )
  ui-connect(
    hash: $button-border-hash,
    each: button-border
  )
  ui-connect(
    hash: $button-normal-hash,
    each: button-brand-style
  )

ui-button-circle-size()
  ui-connect(
    hash: $button-circle-size-hash,
    each: button-circle-size
  )

ui-button-group()
  ui-connect(
    hash: $button-size-hash,
    each: button-group-size
  )