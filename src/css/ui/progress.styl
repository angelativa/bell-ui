{$selector-progress}
  ui-progress()

{$selector-progress-outer}
  font-size 0
  line-height 0

{$selector-progress-inner}
  background-color $progress-bg-color
  border-radius 100px

{$selector-progress-bar}
  border-radius 100px
  transition height .2s, width .2s

{$selector-progress-text}
  white-space nowrap
  font-size $progress-text-font-size
  line-height $ui-single-line-height

{$selector-progress-horizontal}
  {$selector-progress-bar}
    position relative

  > {$selector-progress-text}
    padding-left $ui-icon-text-gap

  &{$selector-progress-with-text}
    display table

    > {$selector-progress-outer},
    > {$selector-progress-text}
      display table-cell
      vertical-align middle

    > {$selector-progress-outer}
      width 100%

{$selector-progress-vertical}
  height 100%
  display inline-block
  text-align center

  {$selector-progress-outer},
  {$selector-progress-inner}
    height 100%

  {$selector-progress-inner}
    position relative
    margin 0 auto

  {$selector-progress-bar}
    position absolute
    bottom 0

  > {$selector-progress-text}
    text-align center
    margin-top $ui-icon-text-gap

{$selector-progress-active}
  {$selector-progress-bar}:before
    content ""
    opacity 0
    position absolute
    left 0
    bottom 0
    background #fff
    border-radius 100px

  &{$selector-progress-horizontal}
    {$selector-progress-bar}:before
      top 0
      animation bell-progress-horizontal-active 2s ease-in-out infinite

  &{$selector-progress-vertical}
    {$selector-progress-bar}:before
      right 0
      animation bell-progress-vertical-active 2s ease-in-out infinite


@keyframes bell-progress-horizontal-active {
  0% {
    opacity .3
    width 0
  }
  100% {
    opacity 0
    width 100%
  }
}
@keyframes bell-progress-vertical-active {
  0% {
    opacity .3
    height 0
  }
  100% {
    opacity 0
    height 100%
  }
}
