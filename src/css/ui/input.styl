{$selector-input}
  display inline-table
  width $ui-form-element-width

  + {$selector-input}
    margin-left $ui-horizontal-gap

{$selector-input-single-line}
  &{$selector-input}
    ui-connect(
      hash: $status-brand-hash,
      each: @(style) {
        input-border-style($selector-input-el, style['color'], style['shadow-color'])
      }
    )
    ui-connect(
      hash: $input-size-hash,
      each: input-single-line-size-style
    )

{$selector-input-multiple-line}
  &{$selector-input}
    ui-connect(
      hash: $status-brand-hash,
      each: @(style) {
        input-border-style($selector-textarea-el, style['color'], style['shadow-color'])
      }
    )

{$selector-input-el},
{$selector-textarea-el}
  border 1px solid $brand-border
  border-radius $border-radius-default
  box-sizing border-box
  background-color transparent
  outline none
  display block
  width 100%
  cursor $cursor-text
  color $brand-text-important
  font-size $ui-font-size
  transition border-color .3s, box-shadow .3s

  ui-placeholder($brand-placeholder)

  &:hover
    border-color $brand-primary

  &:focus
    border-color $brand-primary

    if $ui-shadow-radius > 0
      box-shadow 0 0 0 $ui-shadow-radius $brand-primary-shadow

{$selector-input-el}
  padding 0 $input-el-padding-horizontal

{$selector-textarea-el}
  resize none
  line-height 1.5
  padding $input-el-padding-vertical $input-el-padding-horizontal
  ui-scrollbar()

{$selector-input-prefix},
{$selector-input-suffix}
  position absolute
  top 50%
  color $brand-close-color
  transform translateY(-50%)

{$selector-input-prefix-icon},
{$selector-input-suffix-icon},
{$selector-input-secure-icon},
{$selector-input-clear-icon}
  font-size $ui-icon-size

{$selector-input-secure-icon},
{$selector-input-clear-icon}
  transition color .3s

  &:hover
    color $brand-close-color-hover

{$selector-input-prepend},
{$selector-input-append}
  display table-cell
  vertical-align middle
  text-align center
  width 1px
  border 1px solid $brand-border
  font-size $input-prepend-append-font-size
  box-sizing border-box
  color $input-prepend-append-color
  background-color $input-prepend-append-bg-color
  padding 0 $input-prepend-append-padding-horizontal

  {$selector-select-button},
  {$selector-button}
    border-color transparent !important
    box-shadow none !important
    background-color transparent !important

  {$selector-select-placeholder},
  {$selector-select-value},
  {$selector-button}
    color inherit
    font-size inherit

  {$selector-select},
  {$selector-button}
    margin-top -1px
    margin-bottom -1px
    vertical-align top

  {$selector-button}
    height inherit
    line-height inherit

  {$selector-button}:hover
    color $brand-text !important

{$selector-input-prepend}
  border-right none
  border-top-left-radius $border-radius-default
  border-bottom-left-radius $border-radius-default

  {$selector-select},
  {$selector-button}
    margin-left - $input-prepend-append-padding-horizontal
    margin-right - $input-prepend-append-padding-horizontal

{$selector-input-append}
  border-left none
  border-top-right-radius $border-radius-default
  border-bottom-right-radius $border-radius-default

  {$selector-select},
  {$selector-button}
    margin-left - $input-prepend-append-padding-horizontal
    margin-right - $input-prepend-append-padding-horizontal

{$selector-input-content}
  position relative
  box-sizing border-box

{$selector-input-secure}
  cursor $cursor-clickable

{$selector-input-clear}
  cursor $cursor-clickable
  display none

{$selector-input-no-value}
  {$selector-input-clear}
    display none

{$selector-input-has-value}
  {$selector-input-el}:focus + {$selector-input-clear},
  &:hover {$selector-input-clear}
    display block

{$selector-input-el-with-prepend}
  border-top-left-radius 0
  border-bottom-left-radius 0

{$selector-input-el-with-append}
  border-top-right-radius 0
  border-bottom-right-radius 0

{$selector-input-disabled}
  background-color $brand-bg-disabled

  {$selector-input-el},
  {$selector-textarea-el}
    cursor $cursor-disabled
    color $brand-text-disabled
    border-color $brand-border-disabled