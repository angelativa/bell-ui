{$selector-text}
  ui-text()

{$selector-text-bold}
  font-weight bold

{$selector-text-block}
  display block

body
  font-family "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
  color $brand-content
  font-size $font-size-default

a
  color $brand-primary
  text-decoration none
  transition color .2s

  &:hover
    color $brand-primary-hover
