{$selector-tooltip}
  position relative
  display inline-block

{$selector-tooltip-arrow}
  position absolute
  width 0
  height 0
  border $tooltip-arrow-size solid transparent

{$selector-tooltip-popup}
  position absolute
  font-size 0
  line-height 0
  display none
  transition opacity 0.3s
  z-index $zindex-tooltip

  ui-scrollbar()

{$selector-tooltip-disabled}
  display none

{$selector-tooltip-hover}
  {$selector-tooltip-popup}
    display block
    opacity 0

{$selector-tooltip-visible}
  {$selector-tooltip-popup}
    display block
    opacity 1

{$selector-tooltip-content}
  color $tooltip-color
  font-size $tooltip-font-size
  line-height 1.2

  text-align left
  white-space nowrap
  overflow auto

  max-width $tooltip-max-width
  padding $tooltip-padding
  background-color $tooltip-bg-color
  box-shadow $tooltip-box-shadow
  border-radius $radius-base
  box-sizing border-box


{$selector-tooltip-popup}-bottom,
{$selector-tooltip-popup}-bottom-start,
{$selector-tooltip-popup}-bottom-end
  padding-top $tooltip-padding-inner

  > {$selector-tooltip-arrow}
    top $tooltip-arrow-offset
    border-bottom-color $tooltip-bg-color


{$selector-tooltip-popup}-bottom
  left 50%

  > {$selector-tooltip-arrow}
    left 50%
    margin-left - $tooltip-arrow-size

{$selector-tooltip-popup}-bottom-start
  left 0

  > {$selector-tooltip-arrow}
    left $tooltip-arrow-gap

{$selector-tooltip-popup}-bottom-end
  right 0

  > {$selector-tooltip-arrow}
    right $tooltip-arrow-gap




