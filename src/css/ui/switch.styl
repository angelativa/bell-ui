// 放在 selector-switch 前面，因为它的 border-color 要被 ui-switch 覆盖
{$selector-switch-loading}
  opacity .4

  &:after
    content ''
    border-radius 50%
    position absolute
    left $switch-thumb-gap + $switch-loading-gap
    top $switch-thumb-gap + $switch-loading-gap
    border 1px solid transparent
    box-sizing border-box

    animation bell-switch-loading 1s linear infinite
    transition transform .3s

{$selector-switch}
  display inline-block
  position relative
  user-select none
  box-sizing border-box
  padding 0
  background-color $switch-bg-color
  transition border-color .3s, background-color .3s
  border-radius 100px
  box-shadow inset 0 0 4px rgba(0,0,0,0.1)

  &:before
    content ''
    position absolute
    left $switch-thumb-gap
    top $switch-thumb-gap
    border-radius 50%
    background-color $brand-white
    transition left .3s, margin-left .3s
    box-shadow 0 1px 1px rgba(0,0,0,0.1)

  &:after
    border-left-color $brand-primary

  &{$selector-switch-active}
    background-color $brand-primary

  ui-switch()

  + {$selector-switch}
    margin-left $ui-horizontal-gap

{$selector-switch-label}
  color $brand-white
  font-size $switch-label-font-size
  margin-left $switch-thumb-label-gap
  margin-right $switch-label-gap
  text-shadow 0 1px 0 rgba(0,0,0,0.1)

{$selector-switch-active}
  &:before,
  &:after
    left 100%

  > {$selector-switch-label}
    margin-left $switch-label-gap
    margin-right $switch-thumb-label-gap

{$selector-switch-enabled},
{$selector-switch-enabled}:before
  cursor $cursor-clickable

{$selector-switch-disabled},
{$selector-switch-disabled}:before
  cursor $cursor-disabled

{$selector-switch-disabled}
  opacity $ui-opacity-disabled


@keyframes bell-switch-loading {
  0% {
    transform rotate(0)
  }
  100% {
    transform rotate(360deg)
  }
}