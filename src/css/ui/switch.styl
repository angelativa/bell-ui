{$selector-switch}

    cursor pointer
    position relative
    user-select none
    display inline-block
    box-sizing border-box
    border 1px solid
    transition border-color .3s, background-color .3s

    ui-switch()

    +{$selector-switch}

        margin-left $switch-margin-gap

    &{$selector-active}

        {$selector-switch-button}

            {$selector-switch}-on

                opacity 1

            {$selector-switch}-off

                opacity 0

    {$selector-switch-button}

        display inline-block

        {$selector-switch}-on

            margin-top -1px
            opacity 0
            transition opacity .3s
            text-align center
            display inline-block

        {$selector-switch}-off

            opacity 1
            margin-top -1px
            display inline-block
            text-align left
            transition opacity .3s

        &:after

            cursor pointer
            content " "
            position absolute
            left 1px
            top 1px
            border-radius 100%
            transition left .3s, width .3s

{$selector-switch}-disabled

    cursor $cursor-disabled

    {$selector-switch-button}

        cursor $cursor-disabled

        &:after

            cursor $cursor-disabled