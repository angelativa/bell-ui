{$selector-list}
  ui-list()
  position relative
  list-style none
  user-select none
  padding 0
  margin 0
  color $brand-secondary
  overflow auto

  &{$selector-list}-border
    border $list-border
    border-radius $list-border-radius

    {$selector-list-item}
      border-bottom $list-border

      &:last-child
        border-bottom none

    {$selector-list}-header
      background-color #f8f8f8

  {$selector-list}-empty-description
    text-align center

  {$selector-list}-header
    font-size 14px
    line-height 1.5
    padding 10px

  {$selector-list-item}-content
    position relative
    border-radius $list-border-radius

  {$selector-list-item}-content-hover
    cursor $cursor-clickable

  {$selector-list-item}-footer
    position absolute
    top 50%
    transform translateY(-50%)
    right 15px

  {$selector-list-item}-nested
    display none
    padding 0 10px

    &{$selector-prefix}-show
      display block

  {$selector-list-item}-header
    display inline-block
    vertical-align middle

  {$selector-list-item}-text
    ui-ellipsis()
    display inline-block
    vertical-align middle