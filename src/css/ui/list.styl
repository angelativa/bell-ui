{$selector-list}
  color $brand-text
  overflow-y auto
  ui-list()

{$selector-list-header}
  font-size $ui-font-size
  line-height $ui-single-line-height

{$selector-list-item}
  position relative

{$selector-list-item-clickable}
  cursor $cursor-clickable
  user-select none
  transition background-color .3s
  &:hover
    background-color $brand-bg-hover

{$selector-list-item-header}
  display inline-block
  vertical-align middle
  line-height 0

{$selector-list-item-text}
  display inline-block
  line-height $ui-single-line-height
  vertical-align middle
  ui-ellipsis()

{$selector-list-item-footer}
  position absolute
  top 50%
  transform translateY(-50%)

{$selector-list-empty-desc}
  text-align center

{$selector-list-bordered}
  border 1px solid $brand-border
  border-radius $radius-base

  > {$selector-list-header}
    background-color $list-header-bg-color
    border-bottom 1px solid $brand-border

  > {$selector-list-item} + {$selector-list-item}
    border-top 1px solid $brand-border