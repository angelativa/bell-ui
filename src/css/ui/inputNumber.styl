{$selector-input-number}
  position relative
  box-sizing border-box
  border-radius $border-radius-default
  display inline-block
  border 1px solid $brand-border
  width $ui-form-element-width
  overflow hidden
  transition border-color .3s, box-shadow .3s
  ui-input-number()

  + {$selector-input-number}
    margin-left $ui-horizontal-gap

{$selector-input-number-disabled}
  border-color $brand-border-disabled

{$selector-input-number-el}
  outline none
  border none
  width 100%
  height 100%
  text-align left
  background-color $brand-bg
  color $brand-text

  ui-placeholder($brand-placeholder)

  &:disabled
    cursor $cursor-disabled
    background-color $brand-bg-disabled
    color $brand-text-disabled

{$selector-input-number-actions}
  position absolute
  top 0
  bottom 0
  right 0
  opacity 0
  user-select none
  transition opacity .3s
  border-left 1px solid $brand-border

{$selector-input-number-up},
{$selector-input-number-down}
  position absolute
  left 0
  width 100%
  height 50%
  font-size $ui-icon-size
  text-align center
  background-color $brand-bg-light
  box-sizing border-box
  transition color .3s

{$selector-input-number-up}
  top 0

{$selector-input-number-down}
  bottom 0
  border-top 1px solid $brand-border

{$selector-input-number-up-enabled},
{$selector-input-number-down-enabled}
  cursor $cursor-clickable
  color $brand-close-color

{$selector-input-number-up-disabled},
{$selector-input-number-down-disabled}
  cursor $cursor-disabled
  color $brand-border-disabled

{$selector-input-number-enabled}
  &:hover
    {$selector-input-number-actions}
      opacity 1
