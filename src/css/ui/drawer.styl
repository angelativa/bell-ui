{$selector-drawer}
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  display none

{$selector-drawer-visible}
  display block

{$selector-drawer-fade}
  > {$selector-drawer-mask}
    opacity 1

{$selector-drawer-wrapper}
  position absolute
  background-color $brand-bg
  box-shadow $brand-card-shadow
  transition transform .3s

{$selector-drawer-header}
  ui-ellipsis()
  color $brand-text-important
  font-size $font-size-large
  line-height $ui-single-line-height
  font-weight bold
  padding $drawer-header-padding-vertical $drawer-padding-horizontal
  border-bottom 1px solid $brand-border

{$selector-drawer-body}
  padding $drawer-body-padding-vertical $drawer-padding-horizontal
  color $brand-text
  font-size $font-size-default
  line-height $ui-multiple-line-height
  word-wrap break-word
  overflow-y auto
  box-sizing border-box
  height calc(100% - 50px)

{$selector-drawer-close}
  position absolute
  right $drawer-padding-horizontal
  top $drawer-header-padding-vertical
  font-size $drawer-close-font-size
  width $drawer-close-size
  height $drawer-close-size
  line-height $drawer-close-size
  text-align center
  cursor $cursor-clickable
  color $brand-close-color
  transition color .3s

  &:hover
    color $brand-close-color-hover

{$selector-drawer-mask}
  position absolute
  left 0
  right 0
  top 0
  bottom 0
  background-color $brand-mask
  opacity 0
  transition opacity .3s



{$selector-drawer-left}
  > {$selector-drawer-wrapper}
    transform translate(-100%)
    left 0
    top 0
    bottom 0

  &{$selector-drawer-fade}
    > {$selector-drawer-wrapper}
      transform translate(0)


{$selector-drawer-right}

  > {$selector-drawer-wrapper}
    transform translate(100%)
    right 0
    top 0
    bottom 0

  &{$selector-drawer-fade}
    > {$selector-drawer-wrapper}
      transform translate(0)


{$selector-drawer-top}

  > {$selector-drawer-wrapper}
    transform translateY(-100%)
    top 0
    left 0
    right 0

  &{$selector-drawer-fade}
    > {$selector-drawer-wrapper}
      transform translate(0)


{$selector-drawer-bottom}

  > {$selector-drawer-wrapper}
    transform translateY(100%)
    bottom 0
    left 0
    right 0

  &{$selector-drawer-fade}
    > {$selector-drawer-wrapper}
      transform translate(0)
