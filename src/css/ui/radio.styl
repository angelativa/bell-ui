{$selector-radio-group}
  display inline-block
  user-select none
  ui-radio-group()
  padding 0
  font-size $radio-font-size
  line-height $radio-height

  {$selector-radio}
    position relative
    cursor $cursor-clickable
    margin-right $radio-margin-gap
    font-size $radio-font-size
    line-height 1.5

    {$selector-radio}-wrapper
      position absolute
      width $radio-inner-size
      height $radio-inner-size
      top 50%
      left 0
      transform translateY(-50%)

    {$selector-radio}-inner
      position absolute
      border-radius 100%
      width $radio-inner-size
      height $radio-inner-size
      border 1px solid $radio-border-color
      transition color .15s

      &:after
        display inline-block
        content ' '
        border-radius 100%
        ui-center()
        width 2px
        height 2px
        opacity 0
        transform scale(0) translate(-50%, -50%)
        transform-origin left top
        border 1px solid


    {$selector-radio}-input
      opacity 0

    {$selector-radio}-label
      font-size $radio-font-size
      line-height $radio-font-size
      padding-left $radio-label-padding-left

    &{$selector-active}
      {$selector-radio}-inner
        color #fff
        &:after
          opacity 1
          transform scale(3) translate(-50%,-50%)
          transition transform .3s, opacity .3s

    &{$selector-radio}-disabled
      cursor $cursor-disabled

      span,
      input
        cursor $cursor-disabled

      {$selector-radio}-inner
        background-color #f3f3f3
      
      &{$selector-hover}
        {$selector-radio}-inner
          border-color $radio-border-color
      
{$selector-radio}-vertical
  margin-bottom - $radio-margin-gap

  {$selector-radio}
    width 100%
    display block
    line-height $radio-height
