{$selector-breadcrumb}
  font-size $ui-font-size

{$selector-breadcrumb-separator}
  color $breadcrumb-separator-color
  margin 0 $breadcrumb-separator-gap

{$selector-breadcrumb-link}
  color $breadcrumb-link-color
  cursor $cursor-clickable
  transition color .3s

  &:hover
    color $brand-primary

{$selector-breadcrumb-item}
  > a
    color $breadcrumb-link-color
    font-weight normal
    text-decoration none

  &:last-child
    {$selector-breadcrumb-link}
      cursor $cursor-text
      font-weight bold
      &:hover
        color $breadcrumb-link-color

    {$selector-breadcrumb-separator}
      display none