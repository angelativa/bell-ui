{$selector-breadcrumb}
  font-size $ui-font-size

{$selector-breadcrumb-separator}
  color $breadcrumb-separator-color
  margin 0 $breadcrumb-separator-gap

{$selector-breadcrumb-link}
  user-select none
  color $brand-text
  cursor $cursor-clickable
  transition color .3s

  &:hover
    color $brand-link

{$selector-breadcrumb-item}
  > a
    color $brand-text
    font-weight normal
    text-decoration none

  &:last-child
    {$selector-breadcrumb-link}
      cursor $cursor-text
      font-weight bold

      &:hover
        color $brand-text

    {$selector-breadcrumb-separator}
      display none