{$selector-breadcrumb}
  margin $breadcrumb-margin
  color $breadcrumb-link-color

  {$selector-breadcrumb}-gap
    display inline-block
    vertical-align middle
    margin-left $breadcrumb-gap-margin-left

  {$selector-breadcrumb}-link
    font-weight normal
    cursor pointer
    text-decoration none
    color $breadcrumb-link-color

  {$selector-breadcrumb-item}
    &:last-child
      {$selector-breadcrumb}-link
        font-weight 700
        color #515a6e

      {$selector-breadcrumb}-gap
        display none