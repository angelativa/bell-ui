{$selector-badge},
{$selector-badge-status}
  display inline-block
  position relative
  font-size 0

{$selector-badge-dot}
  border-radius 50%
  width $badge-dot-size
  height $badge-dot-size
  box-sizing content-box

{$selector-badge-content}
  font-size $ui-font-size

{$selector-badge-text}
  font-size $badge-text-font-size
  box-sizing border-box
  white-space nowrap

// 漂浮的角标
{$selector-badge}
  ui-badge()

  > {$selector-badge-dot}
    position absolute
    right -0.5 * $badge-dot-size
    top -0.5 * $badge-dot-size
    box-shadow 0 0 0 1px #fff

  > {$selector-badge-text}
    // 给一个足够大的值就行了
    border-radius 100px
    text-align center
    color #fff
    min-width $badge-text-height
    height $badge-text-height
    line-height $badge-text-height
    padding 0 $badge-padding-horizontal
    box-shadow 0 0 0 1px #fff

  > {$selector-badge-text-addon}
    position absolute
    left 100%
    top 0
    transform translate(-50%, -50%)

  > {$selector-badge-text-only}
    display inline-block

{$selector-badge-status}

  > {$selector-badge-dot}
    display inline-block

  > {$selector-badge-text}
    color $brand-text
    background-color transparent

  > {$selector-badge-dot} + {$selector-badge-text}
    margin-left $ui-icon-text-gap

{$selector-badge-ripple}
  > {$selector-badge-dot}
    position relative
    &:after
      content ""
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border-radius 50%
      box-sizing border-box
      border 1px solid
      animation bell-badge-ripple 1.2s infinite ease-in-out

@keyframes bell-badge-ripple {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  100% {
    transform: scale(2.4);
    opacity: 0;
  }
}