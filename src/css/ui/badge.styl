{$selector-badge}
  ui-badge()

  position relative
  display inline-block
  vertical-align middle
  line-height 1

  {$selector-badge-dot}
    height $badge-dot-size
    width $badge-dot-size
    position absolute
    right - $badge-dot-size
    top 0
    transform translate(-50%, -50%)
    border-radius 100%
    z-index $zindex-badge
    box-shadow $badge-box-shadow

  {$selector-badge-count}
    white-space nowrap
    position absolute
    left 100%
    top 0
    transform translate(-50%, -50%)
    text-align center
    border-radius $badge-radius
    color $badge-color
    padding $badge-padding
    font-size $badge-font-size
    box-shadow $badge-box-shadow
    z-index $zindex-badge

  {$selector-badge-count}-alone

    position relative
    left 0

{$selector-badge-status}
  display inline-block
  vertical-align middle
  position relative

  {$selector-badge-dot}
    display inline-block
    vertical-align middle
    border-radius 50%
    height $badge-dot-size
    width $badge-dot-size
    z-index $zindex-badge
    position relative

  {$selector-badge-count}
    display inline-block
    vertical-align middle
    color $badge-status-text-color
    font-size $badge-font-size
    margin-left $badge-status-text-margin-left
    background-color transparent

  &{$selector-badge}-processing
    {$selector-badge}-dot
      &:after
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        border-radius 50%
        box-sizing border-box
        border 1px solid #2d8cf0
        content ""
        animation statusProcessing 1.2s infinite ease-in-out

@keyframes statusProcessing {
  0% {
    transform: scale(0.8);
    opacity: 0.5;
  }
  100% {
    transform: scale(2.4);
    opacity: 0;
  }
}