{$selector-badge},
{$selector-badge-status}
  display inline-block

{$selector-badge}
  position relative

  // 避免底部有空隙，即 badge height > avatar height
  > {$selector-avatar}
    vertical-align middle

{$selector-badge-dot}
  display inline-block
  box-sizing border-box
  border-radius $border-radius-circle

{$selector-badge-text}
  box-sizing border-box
  white-space nowrap

// 漂浮的角标
{$selector-badge}
  ui-badge()

  > {$selector-badge-dot}
    position absolute
    right -0.5 * $badge-dot-size
    top -0.5 * $badge-dot-size
    width $badge-dot-size
    height $badge-dot-size
    border 1px solid $brand-white

  > {$selector-badge-text}
    border-radius $border-radius-round
    display inline-block
    text-align center
    color $brand-white
    font-size $font-size-small
    min-width $badge-text-height
    height $badge-text-height
    line-height $badge-text-height
    padding 0 $badge-padding-horizontal

  > {$selector-badge-text-append}
    border 1px solid $brand-white
    line-height $badge-text-height - 2
    position absolute
    left 100%
    top 0
    transform translate(-50%, -50%)

// 状态点
{$selector-badge-status}
  ui-badge-status()

  > {$selector-badge-dot}
    width $badge-status-dot-size
    height $badge-status-dot-size
    vertical-align middle

  > {$selector-badge-text}
    color $brand-content
    font-size $font-size-default

  > {$selector-badge-dot} + {$selector-badge-text}
    margin-left $ui-icon-text-gap

{$selector-badge-ripple}
  > {$selector-badge-dot}
    position relative
    &:after
      content ''
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border-radius $border-radius-circle
      box-sizing border-box
      border 1px solid
      animation bell-badge-ripple 1.2s infinite ease-in-out

@keyframes bell-badge-ripple
  0%
    transform scale(0.8)
    opacity 0.5

  100%
    transform scale(2.4)
    opacity 0

