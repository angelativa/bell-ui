{$selector-datepicker-month}

    user-select none
    box-sizing border-box
    background-color $brand-bg
    border-radius $radius-base
    box-shadow $datepicker-box-shadow
    width $datepicker-width

    {$selector-datepicker-header}

        box-sizing border-box
        display flex
        width 100%

        padding $datepicker-month-header-padding
        border-bottom 1px solid $datepicker-month-header-border-color

        {$selector-datepicker-header}-button
            flex 1
            text-align center
            cursor pointer

            {$selector-icon}
                margin 0

    {$selector-datepicker-body}
        display flex
        flex-wrap wrap
        text-align center
        line-height 1
        width 100%
        box-sizing border-box

        font-size $datepicker-month-item-font-size
        padding $datepicker-month-item-padding

        {$selector-datepicker}-col
            cursor pointer
            box-sizing border-box
            width 25%
            padding $datepicker-month-item-padding

            &{$selector-datepicker}-col-checked
                color $datepicker-month-item-hover-color

            &{$selector-hover}

                color $datepicker-month-item-hover-color
