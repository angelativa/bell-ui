{$selector-spin}
  display inline-block
  text-align center
  line-height 1.7
  ui-spin()

{$selector-spin-content}
  text-align center

{$selector-spin-icon}
  vertical-align top

{$selector-spin-fixed}

  ui-fullscreen(absolute)
  background-color $brand-mask-light-color
  z-index 1

  &{$selector-spin-legacy}
    background-color $brand-mask-light-color-legacy
    opacity $brand-mask-light-opacity-legacy

  > {$selector-spin-content}
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)