{$selector-result}
  text-align center
  padding $result-padding-vertical $result-padding-horizontal
  ui-result()

{$selector-result-icon}
  margin-bottom $result-icon-gap

{$selector-result-status-icon}
  font-size $result-icon-size

{$selector-result-title}
  color $brand-title
  font-size $result-title-font-size
  font-weight bold
  line-height 1.8

{$selector-result-content}
  color $brand-content
  font-size $font-size-default
  line-height 1.6

{$selector-result-extra}
  margin-top $result-extra-gap