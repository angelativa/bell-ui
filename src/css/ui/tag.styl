{$selector-tag}
  display inline-block
  position relative
  border 1px solid $brand-border
  background-color $tag-bg-color
  color $brand-text
  font-size $tag-font-size
  border-radius $radius-base
  box-sizing border-box
  transition background-color .3s, border-color .3s, color .3s

{$selector-tag-checkable}
  cursor $cursor-clickable

{$selector-tag-close-icon}
  position absolute
  top 0
  right 0
  bottom 0
  cursor $cursor-clickable
  text-align center
  color $brand-close-color
  font-size $tag-close-font-size
  transition color .3s
  &:hover
    color $brand-close-color-hover

{$selector-tag-border},
{$selector-tag-dot}
  border-color $brand-border
  background-color $tag-border-bg-color

{$selector-tag-border}
  &{$selector-tag-closable}:after
    content ''
    width 1px
    position absolute
    top 0
    bottom 0
    background-color $brand-divider

{$selector-tag-unborder}
  border none
  background-color transparent

{$selector-tag-dot}:before
  content ''
  border-radius 50%
  position absolute
  top 50%
  background-color $tag-dot-color

// 放在最后，避免被覆盖
{$selector-tag}
  ui-tag()