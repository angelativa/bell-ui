{$selector-timeline-item}
  padding-bottom $timeline-item-gap
  position relative

  &:before
    content ''
    border-left $timeline-line-width solid $timeline-line-color
    position absolute
    left $timeline-line-left
    top $timeline-dot-size
    bottom 0

  &:last-child
    padding-bottom 0
    &:before
      display none

{$selector-timeline-dot},
{$selector-timeline-custom}
  position absolute
  width $timeline-dot-size
  height $timeline-dot-size

{$selector-timeline-dot}
  border-radius $border-radius-circle
  border $timeline-line-width solid $timeline-line-color

{$selector-timeline-custom}
  text-align center

  > {$selector-icon}
    vertical-align top

{$selector-timeline-content}

  position relative
  top $timeline-content-top
  padding-left $timeline-content-padding-left

  color $brand-text
  font-size $font-size-default
  line-height $ui-multiple-line-height

  p
    padding 0
    margin 0
    font-size $font-size-default
    line-height $ui-multiple-line-height

{$selector-timeline-pending}
  {$selector-timeline-item}
    &:nth-last-of-type(2):before
      border-left-style dotted

