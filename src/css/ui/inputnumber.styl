{$selector-input-number}
    position relative
    display inline-block
    cursor text
    line-height 1
    margin 0
    padding 0
    overflow hidden
    transition all .2s ease-in-out

    font-size $input-number-font-size
    border-radius $input-number-border-radius
    color $input-number-color
    background-color $input-number-background-color
    border 1px solid $input-number-border-color

    ui-input-number()

    +{$selector-input-number}

        margin-left $input-number-margin-left

    &{$selector-hover}

        border-color $input-number-hover-border-color

        {$selector-input-number-actions}

            opacity 1

    &.bell-focus

        box-shadow $input-number-focus-box-shadow

    {$selector-input-number-actions}
        float right
        cursor pointer
        transition opacity .2s ease-in-out
        opacity 0
        width $input-number-actions-width

        {$selector-icon}
            display inline-block
            width 100%
            text-align center
            font-weight 700
            border-left 1px solid $input-number-actions-color

            + {$selector-icon}
                border-top 1px solid $input-number-actions-color
                margin-top: -1px;

            &{$selector-hover}
                color $input-number-hover-actions-color

    {$selector-input-number-wrapper}
        overflow hidden
        height 100%

        {$selector-input}
            outline none
            border none
            width 100%
            height 100%
            text-align left
            cursor pointer

{$selector-input-number}-disabled
    {$selector-input-number-wrapper}
        {$selector-input}
            position absolute
            top 0
            left 0
            right 0
            bottom 0
            cursor $cursor-disabled

            background-color $input-number-disabled-background
            color $input-number-disabled-color
            padding-left $input-number-disabled-padding-left

    &{$selector-hover}
        border-color $input-number-border-color

{$selector-input-number}-readonly

    {$selector-input-number}-actions

        display none

    &{$selector-hover}

        border-color @input-number-border-color

