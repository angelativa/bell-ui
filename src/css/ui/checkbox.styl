{$selector-checkbox}
    ui-checkbox()

    user-select none
    display inline-block
    cursor $cursor-clickable

    font-size $checkbox-font-size

    + {$selector-checkbox}
        margin-left $checkbox-margin-left

    {$selector-checkbox}-wrapper
        display inline-block
        vertical-align middle
        white-space nowrap
        cursor pointer
        outline 0
        line-height 1
        position relative
        width $checkbox-inner-width
        height $checkbox-inner-width

        &{$selector-active}
            {$selector-checkbox-inner}
                &:after
                    transform rotate(45deg) scale(1)

    {$selector-checkbox}-inner
        display inline-block
        position relative

        width $checkbox-inner-width
        height $checkbox-inner-width
        border-radius $checkbox-inner-border-radius

        border 1px solid $checkbox-inner-border-color
        background-color $checkbox-inner-background-color

        transition border-color .2s ease-in-out, background-color .2s ease-in-out

        &:after
            display inline-block
            content " "
            position absolute

            top 0px
            left 3px

            width $checkbox-inner-after-width
            height $checkbox-inner-after-height
            border 2px solid $checkbox-inner-background-color

            transform rotate(45deg) scale(0)
            transition all .2s ease-in-out

            border-top 0
            border-left 0

    {$selector-checkbox-input}
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index 1
        cursor pointer
        opacity 0
        margin 0


    {$selector-checkbox}-label
        display inline-block
        vertical-align middle
        margin-left $checkbox-label-margin-left


{$selector-checkbox}-disabled
    cursor not-allowed
    color $checkbox-disabled-color

    {$selector-checkbox}-wrapper
        cursor not-allowed

        {$selector-checkbox}-inner
            cursor not-allowed
            background-color $checkbox-disabled-background-color

        &{$selector-active}
            {$selector-checkbox}-inner
                border-color $checkbox-disabled-background-color
                background-color $checkbox-disabled-border-color
                &:after
                    border-color $checkbox-disabled-color

    {$selector-checkbox}-label
        cursor not-allowed

{$selector-checkbox}-vertical

    display flex
    flex-direction column

    {$selector-checkbox}

        flex 1