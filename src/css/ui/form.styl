{$selector-form}
  margin 0
  padding 0
  line-height 1.5

  font-size $form-size
  color $form-font-color

  &{$selector-form}-inline
    {$selector-form}-item
      display inline-block
      margin-right $form-margin-right
      margin-bottom 0

  &[data-position="left"]
    {$selector-form-item-label}
      text-align left
      float left
      padding 6px 12px 5px 0

  &[data-position="right"]
    {$selector-form-item-label}
      text-align right
      float left
      padding 6px 12px 5px 0

  &[data-position="top"]
    {$selector-form-item-label}
      float none
      padding 6px 12px 5px 0
      width auto !important

    {$selector-form}-item-content
      margin-left 0 !important

  {$selector-form}-item-required
    {$selector-form-item-label}
      &:before
        content "*"
        display inline-block
        margin-right 4px
        line-height 1
        font-size 12px
        color #ed4014

  {$selector-form}-item
    color $form-font-color
    font-size $form-size
    line-height 1.5
    margin $form-margin
    padding 0
    vertical-align top

    {$selector-form}-item-content
      position relative
      line-height 32px
      font-size 12px
      display inline-block

      {$selector-form}-item-error-tip
        position absolute
        top 100%
        left 0
        line-height 1
        padding-top $form-error-gap
        color $form-error-color
        font-size $form-error-size

    {$selector-form-item-label}
      white-space nowrap
      vertical-align middle
      line-height 1.5
      display inline-block



