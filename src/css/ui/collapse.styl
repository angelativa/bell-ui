{$selector-collapse}
  overflow hidden
  border 1px solid $brand-border

  {$selector-collapse}
    margin-top $ui-vertical-gap

{$selector-collapse-simple}
  border-left 0
  border-right 0

  {$selector-collapse-wrapper}
    padding-top 0

{$selector-collapse-bordered}
  border-radius $border-radius-default

  > {$selector-collapse-panel} > {$selector-collapse-header}
    background-color $collapse-header-bg-color

  > {$selector-collapse-open} > {$selector-collapse-header}
    border-bottom 1px solid $brand-border

{$selector-collapse-panel} + {$selector-collapse-panel}
  border-top 1px solid $brand-border

{$selector-collapse-header}
  cursor $cursor-clickable
  user-select none
  font-size $ui-font-size
  padding $collapse-header-padding-vertical $collapse-padding-horizontal

{$selector-collapse-icon}
  margin-right $ui-icon-text-gap

{$selector-collapse-arrow-icon}
  color $collapse-arrow-icon-color
  font-size $collapse-arrow-icon-font-size

  &:before
    transition transform .1s
    transform rotate(-90deg)

{$selector-collapse-extra}
  float right

{$selector-collapse-content}
  display none
  overflow hidden
  font-size $ui-font-size
  line-height $ui-multiple-line-height
  padding 0 $collapse-padding-horizontal
  transition height .1s

{$selector-collapse-wrapper}
  padding-top $collapse-content-padding-vertical
  padding-bottom $collapse-content-padding-vertical

{$selector-collapse-open}
  > {$selector-collapse-header} {$selector-collapse-arrow-icon}:before
    transform rotate(0)

  > {$selector-collapse-content}
    display block