{$selector-collapse}
  overflow hidden
  border 1px solid $brand-border
  border-radius $collapse-border-radius

  {$selector-collapse}
    border-top 1px solid $brand-border

{$selector-collapse-simple}
  border-left none
  border-right none

  {$selector-collapse-wrapper}
    padding-top 0

{$selector-collapse-bordered}

  > {$selector-collapse-panel} > {$selector-collapse-header}
    background-color $collapse-header-bg-color

  > {$selector-collapse-open} > {$selector-collapse-header}
    border-bottom 1px solid $brand-border

{$selector-collapse-panel} + {$selector-collapse-panel}
  border-top 1px solid $brand-border

{$selector-collapse-header}
  cursor $cursor-clickable
  user-select none
  padding $collapse-header-padding
  font-size $collapse-header-font-size

{$selector-collapse-icon}
  margin-right $ui-label-gap

  &:before
    transition transform .1s
    transform-origin center
    transform rotate(-90deg)

{$selector-collapse-extra}
  float right

{$selector-collapse-content}
  display none
  overflow hidden
  padding-left $collapse-content-padding-horizontal
  padding-right $collapse-content-padding-horizontal
  transition height .1s

{$selector-collapse-wrapper}
  padding-top $collapse-content-padding-vertical
  padding-bottom $collapse-content-padding-vertical

{$selector-collapse-open}
  > {$selector-collapse-header} > {$selector-collapse-icon}:before
    transform rotate(0)

  > {$selector-collapse-content}
    display block