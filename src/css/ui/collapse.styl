{$selector-collapse}
  overflow hidden
  border 1px solid $brand-border

{$selector-collapse-simple}
  border-left 0
  border-right 0

  {$selector-collapse-content}
    padding-top 0

{$selector-collapse-bordered}
  border-radius $border-radius-default

  > {$selector-collapse-item} > {$selector-collapse-header}
    background-color $collapse-header-bg-color

  > {$selector-collapse-opened} > {$selector-collapse-header}
    border-bottom 1px solid $brand-border

{$selector-collapse-item} + {$selector-collapse-item}
  border-top 1px solid $brand-border

{$selector-collapse-header}
  user-select none
  font-size $font-size-default
  line-height $ui-single-line-height
  padding $collapse-header-padding-vertical $collapse-padding-horizontal

{$selector-collapse-arrow-icon}
  color inherit
  display inline-block
  font-size $collapse-arrow-icon-size
  margin-right $ui-icon-text-gap
  vertical-align top
  transition transform .2s

{$selector-collapse-extra}
  float right

{$selector-collapse-content}
  display none
  overflow hidden
  color $brand-content
  font-size $font-size-default
  line-height $ui-multiple-line-height
  padding $collapse-content-padding-vertical $collapse-padding-horizontal
  transition height .1s

{$selector-collapse-opened}
  > {$selector-collapse-header} > {$selector-collapse-arrow-icon}
    transform rotate(90deg)

  > {$selector-collapse-content}
    display block

{$selector-collapse-enabled}
  > {$selector-collapse-header}
    cursor $cursor-clickable
    color $brand-title

{$selector-collapse-disabled}
  > {$selector-collapse-header}
    cursor $cursor-disabled
    color $brand-disabled