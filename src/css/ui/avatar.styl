{$selector-avatar}
  overflow hidden
  display inline-block
  text-align center
  position relative
  background-color $avatar-bg-color
  border-radius $border-radius-default
  transition background-color .2s

  ui-avatar()

  + {$selector-avatar}
    margin-left $ui-horizontal-gap

  > {$selector-icon}
    vertical-align middle

  > img
    width 100%
    height 100%

{$selector-avatar-image}
  background-color transparent

// 只有 CSS3 可以缩放文本缩放
{$selector-avatar-text}
  color $brand-white
  position absolute
  left 50%
  white-space nowrap
  transform-origin 0 center

{$selector-avatar-circle}
  border-radius $border-radius-circle