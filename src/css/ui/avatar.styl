{$selector-avatar}
  overflow hidden
  display inline-block
  text-align center
  position relative
  background-color $avatar-bg
  ui-avatar()

  + {$selector-avatar}
    margin-left $ui-horizontal-gap

{$selector-avatar-image}
  width 100%
  height 100%

{$selector-avatar-text}
  position absolute
  left 50%
  white-space nowrap
  transform-origin 0 center

{$selector-avatar-circle}
  border-radius 50%