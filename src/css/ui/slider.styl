{$selector-slider}

    position: relative;
    width: 100%;
    height: 24px;
    cursor: default;
    user-select: none;
    outline: none;

    {$selector-slider-bg}
        width: 100%;
        position: absolute;
        left: 0;
        top: 50%;
        height: 2px;
        margin-top: -1px;

        background-color: #bdbdbd;

    {$selector-slider-fill}

        position: absolute;
        left: 0;
        top: 50%;
        height: 2px;
        margin-top: -1px;

        background-color: #2196f3;
        transition: width .3s linear;

    {$selector-slider-thumb}
        width: 8px;
        height: 8px;
        position: absolute;
        top: 50%;
        margin-top: -4px;
        border-radius: 100%;
        background-color: #2196f3;
        transition: transform .3s linear;
        cursor: pointer;

        &:hover {
            transform: scale(1.5);
        }