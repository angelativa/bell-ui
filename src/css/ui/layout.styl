{$selector-layout}
  display flex
  flex auto
  box-sizing border-box
  background-color $layout-bg-color

{$selector-layout-horizontal}
  flex-direction row

{$selector-layout-vertical}
  flex-direction column

{$selector-layout-header}
  flex 0 0 auto
  padding 0 $layout-padding-horizontal
  height $layout-header-height
  line-height $layout-header-height

{$selector-layout-header-extra}
  float right

{$selector-layout-sider}
  background-color $layout-dark-bg-color
  transition all .3s
  ui-scrollbar(0px)

{$selector-layout-sider-with-trigger}
  position relative
  padding-bottom $layout-sider-trigger-height

{$selector-layout-sider-logo}
  height $layout-header-height
  line-height $layout-header-height
  text-align center

{$selector-layout-sider-collapsed}

  {$selector-layout-sider-trigger-icon}
    transform rotate(180deg)

{$selector-layout-sider-trigger}
  position absolute
  bottom 0
  left 0
  right 0
  height $layout-sider-trigger-height
  line-height $layout-sider-trigger-height
  background-color $layout-dark-bg-color
  color $brand-white
  text-align center
  ui-clickable()

{$selector-layout-sider-trigger-icon}
  display inline-block
  font-size $layout-sider-trigger-icon-size
  line-height inherit

{$selector-layout-content}
  flex auto

{$selector-layout-footer}
  flex 0 0 auto
  padding $layout-padding-horizontal
  color $brand-muted
  font-size $font-size-default
  line-height $ui-multiple-line-height
  text-align center
