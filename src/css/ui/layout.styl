{$selector-layout}

    ui-row()
    ui-layout()
    flex 1

    {$selector-layout}-sider

        transition flex .4s
        overflow auto
        max-height 100%

    {$selector-sider}-trigger

        position absolute
        right 0
        left 0
        bottom 0
        text-align center
        cursor pointer
        padding 10px
        color #fff
        transition transform .2s

    &{$selector-column}

        ui-column()

    &{$selector-fluid}

        width 100%


{$selector-layout-header}-left
    float left

{$selector-layout-header}-right
    float right

{$selector-layout-header}-center
    margin 0 auto
    display inline-block

{$selector-layout-sider}
    position relative


{$selector-layout-fixed}

    ui-fullscreen()
    overflow hidden

{$selector-menu}

    ui-menu()

    display block
    margin 0
    padding 0
    outline 0
    list-style none
    position relative
    color $layout-menu-default-color
    font-size $layout-menu-default-font-size
    transition background .3s, width .2s
    zoom 1


{$selector-menu-submenu},
{$selector-menu-item}

    display block
    outline 0
    list-style none
    position relative
    cursor pointer
    font-size $layout-menu-default-font-size
    padding $layout-menu-submenu-default-padding
    transition all .2s ease-in-out

{$selector-menu-item}-disabled

    color: rgba(0,0,0,.25)!important;
    background: 0 0;
    border-color: transparent!important;
    cursor: not-allowed;

{$selector-menu}-dropdown
    position: absolute;
    max-height: 200px;
    overflow: auto;
    margin: 5px 0;
    padding: 5px 0;
    background-color: #fff;
    box-sizing: border-box;
    border-radius: 4px;
    box-shadow: 0 1px 6px rgba(0,0,0,.2);

{$selector-menu-group}

    line-height: normal;
    list-style: none;
    margin: 0;
    padding: 0;

    > ul 
        line-height: normal;
        list-style: none;
        margin: 0;
        padding: 0;
        
        {$selector-menu-submenu},
        {$selector-menu-item}
        
            padding: 7px 16px 8px;
            color: #515a6e;

{$selector-menu-group}-title

    height: 30px;
    line-height: 30px;
    padding-left: 8px;
    font-size: 12px;
    color: #999;


{$selector-menu}-vertical

    height auto
    text-align left

    {$selector-menu-submenu},
    {$selector-menu}-item

        padding: 14px 24px
        position: relative
        cursor: pointer
        z-index: 1
        transition: all .2s ease-in-out

    {$selector-menu}-sub-menu

        padding 0
        height auto

        {$selector-menu}-title
            display flex
            {$selector-menu}-title-text
                flex 1
            {$selector-menu}-title-icon
                font-weight bold
                line-height 48px
                transition transform .3s
                &{$selector-menu}-open
                    transform rotate(180deg)

        {$selector-menu}-title,
        {$selector-menu}-item

            padding 0 15px 

        {$selector-menu}-groups

            overflow hidden
            transition height 0.4s

    {$selector-menu}-group-title

        padding 17px 10px
        line-height 1

{$selector-sider-collapsed}

    {$selector-menu}-item

        text-align center

    {$selector-sider}-trigger
    
        transform rotate(180deg)
