{$selector-layout}
  display flex
  flex 1
  width 100%
  height 100%
  box-sizing border-box

{$selector-layout-horizontal}
  flex-direction row

{$selector-layout-vertical}
  flex-direction column

{$selector-layout-header}
  display flex
  flex-direction row
  justify-content space-between

{$selector-layout-sider}
  display flex
  flex-direction column
  width $layout-sider-width
  transition width .3s

{$selector-layout-sider-collapsed}
  width $menu-collapsed-width

  {$selector-layout-sider-trigger-icon}:before
    transform rotate(180deg)

{$selector-layout-sider-children}
  height 100%
  overflow-y auto

  > {$selector-menu}
    height 100%

{$selector-layout-sider-trigger}
  text-align center

{$selector-layout-sider-trigger-icon}:before
  transition transform .3s

{$selector-layout-content}
  width 100%
  height 100%
