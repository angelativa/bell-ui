{$selector-layout}

    ui-row()
    ui-layout()

    {$selector-layout}-sider

        position relative
        transition flex .4s

    {$selector-sider}-trigger

        position absolute
        right 0
        padding 10px
        background-color rgba(255,255,255,.2)
        bottom 0

    {$selector-sider-collapsed}

        flex 0 0 100px

        {$selector-menu}-item

            > span

                font-size 16px !important
                width auto
                display inline-block !important

                + span

                    width 0
                    height 0
                    overflow hidden
                    display inline-block
                    transition width .3s

    &{$selector-column}

        ui-column()

    &{$selector-fluid}
        width 100%

{$selector-menu}

    ui-menu()

    height 62px
    line-height 62px
    font-size 14px

{$selector-menu}-sub-menu,
{$selector-menu}-item

    position relative
    padding $layout-menu-item-padding
    cursor pointer
    border-bottom 2px solid transparent
    display inline-block
    height inherit
    line-height inherit
    transition all 0.4s

{$selector-menu-vertical}

    height auto
    text-align left

    {$selector-menu}-sub-menu,
    {$selector-menu}-item

        line-height 1
        padding 14px 24px
        display block
        height auto
        border-bottom none
        border-right 2px solid transparent
        transition all 0.4s

    {$selector-menu}-sub-menu

        padding 0

        {$selector-menu}-title
            position relative

            {$selector-menu}-title-icon
                position absolute
                top 50%
                right 15px
                transform translateY(-50%)

        {$selector-menu}-title,
        {$selector-menu}-item

            padding 15px

        {$selector-menu}-groups

            overflow hidden
            transition height 0.4s



    {$selector-menu}-group-title

        padding 5px 10px
        line-height 1

