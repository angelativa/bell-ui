{$selector-layout}

  ui-row()
  ui-layout()
  flex 1

  {$selector-layout}-sider

    transition flex .4s
    max-height 100%

  {$selector-layout-sider}-trigger

    position absolute
    right 0
    left 0
    bottom 0
    text-align center
    cursor pointer
    padding 10px
    color #fff
    transition transform .2s
    z-index $zindex-menu

  &{$selector-column}

    ui-column()

  &{$selector-fluid}

    width 100%

{$selector-layout-header}-left
  float left

{$selector-layout-header}-right
  float right

{$selector-layout-header}-center
  margin 0 auto
  display inline-block

{$selector-layout-sider}
  position relative

  &{$selector-layout-sider}-collapsed
    {$selector-layout-sider}-trigger-icon  
      &::before 
        transition transform .2s
        transform rotate(-180deg)

    {$selector-layout-sider}-children
      overflow visible

  {$selector-layout-sider}-children
    position absolute
    top 0
    left 0
    right 0
    bottom 38px
    overflow auto


{$selector-layout-fixed}

  ui-fullscreen()
  overflow hidden