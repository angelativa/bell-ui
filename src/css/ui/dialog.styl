{$selector-dialog}
  position fixed
  top 0
  right 0
  left 0
  z-index $zindex-dialog
  height 100%
  display none

{$selector-dialog-visible}
  display block

{$selector-dialog-fade}
  > {$selector-dialog-wrapper}
    opacity 1
    transform translate(-50%, -50%) scale(1)

  > {$selector-dialog-mask}
    opacity 1

{$selector-dialog-mask}
  position absolute
  top 0
  right 0
  bottom 0
  left 0

  opacity 0
  user-select none
  background-color $brand-mask
  transition opacity .3s

{$selector-dialog-wrapper}
  max-height 100%
  overflow hidden
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%) scale(.4)
  opacity 0

  border-radius $border-radius-default
  background-color $brand-bg
  box-shadow $brand-card-shadow
  transition transform .3s, opacity .3s

{$selector-dialog-header}
  ui-ellipsis()
  color $brand-text-important
  font-size $font-size-large
  line-height $ui-single-line-height
  font-weight bold
  padding $dialog-header-padding-vertical $dialog-padding-horizontal
  border-bottom 1px solid $brand-border

{$selector-dialog-close}
  position absolute
  right $dialog-padding-horizontal
  top $dialog-header-padding-vertical
  font-size $dialog-close-font-size
  width $dialog-close-size
  height $dialog-close-size
  line-height $dialog-close-size
  text-align center
  cursor $cursor-clickable
  color $brand-close-color
  transition color .3s

  &:hover
    color $brand-close-color-hover

{$selector-dialog-body}
  font-size $font-size-default
  line-height $ui-multiple-line-height
  overflow-y auto
  padding $dialog-body-padding-vertical $dialog-padding-horizontal

{$selector-dialog-footer}
  border-top 1px solid $brand-border
  text-align right
  padding $dialog-footer-padding-vertical $dialog-footer-padding-horizontal


