{$selector-divider}
  box-sizing border-box
  background-color $brand-border

{$selector-divider-horizontal}
  display block
  clear both
  width 100%
  height 1px
  margin $divider-horizontal-gap 0

{$selector-divider-vertical}
  display inline-block
  vertical-align middle
  position relative
  width 1px
  height .9em
  top -.06em
  margin 0 $divider-vertical-gap

{$selector-divider-text}
  margin 0 $divider-text-gap

{$selector-divider-dashed}
  background-color transparent
  border-top 1px dashed $brand-border

{$selector-divider-with-text}

  display table
  white-space nowrap
  background-color transparent
  border-top 0

  color $brand-content
  font-size $font-size-default

  &:before,
  &:after
    content ''
    position relative
    display table-cell
    border-top 1px solid $brand-border
    transform translateY(50%)
    top 50%
    width 50%

  &{$selector-divider-dashed}
    &:before,
    &:after
      border-top-style dashed

  &{$selector-divider-left}
    &:before
      width 5%
    &:after
      width 95%

  &{$selector-divider-right}
    &:before
      width 95%
    &:after
      width 5%