{$selector-radio-button}
  display inline-block
  user-select none

  ui-radio-button-group()

  +{$selector-radio-button}
    margin-left $radio-button-gap

  {$selector-radio}-wrapper
    display none

  {$selector-radio}
    margin-right 0
    display inline-block
    border 1px solid $brand-border
    transition border-color .15s, color .15s, background-color .15s
    cursor $cursor-clickable  
    position relative

    &:after
      content ' '
      position absolute
      height 100%
      width 1px
      right 0
      top 0

    +{$selector-radio}
      margin-left -1px

  {$selector-radio}:first-child
    border-top-left-radius $radius-base
    border-bottom-left-radius $radius-base

  {$selector-radio}:last-child
    border-top-right-radius $radius-base
    border-bottom-right-radius $radius-base

    &:after
      content none

  {$selector-radio}-disabled
    cursor $cursor-disabled