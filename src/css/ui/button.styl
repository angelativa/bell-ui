{$selector-button}
  display inline-block
  text-align center
  user-select none
  white-space nowrap
  box-sizing border-box
  outline 0
  padding 0

  border 1px solid $brand-border
  color $brand-content
  background-color $brand-bg

  transition color .2s, border-color .2s, box-shadow .2s, background-color .2s

  &{$selector-button-ghost}
    color $brand-white
    border-color $brand-white
    background-color transparent !important
    transition color .2s, border-color .2s, box-shadow .2s

  &{$selector-button-text},
  &{$selector-button-link}
    border 0
    background-color transparent

    &:focus
      box-shadow none

  &{$selector-button-link}
    color $brand-primary

  ui-button()

  + {$selector-button}
    margin-left $ui-horizontal-gap

  > {$selector-icon} + span,
  > span + {$selector-icon}
    margin-left $ui-icon-text-gap

  {$selector-icon}
    line-height inherit

  {$selector-icon},
  > span
    display inline-block
    vertical-align top

{$selector-button-dashed}
  border-style dashed

{$selector-button-circle}
  padding 0
  border-radius $border-radius-circle
  ui-button-circle-size()

{$selector-button-round}
  border-radius $border-radius-round

{$selector-button-enabled}
  cursor $cursor-clickable

  ui-button-group-separator($brand-primary, $brand-primary)

  &{$selector-button-link}:hover
    color $brand-primary-hover

  &:hover,
  &:active
    color $brand-primary
    border-color $brand-primary

  if $ui-shadow-radius > 0
    &:focus
      box-shadow 0 0 0 $ui-shadow-radius $brand-primary-shadow

{$selector-button-disabled}
  cursor $cursor-disabled
  border-color $brand-border
  background-color $brand-bg-disabled
  color $brand-disabled

  &{$selector-button-text},
  &{$selector-button-link}
    color $brand-disabled

  &{$selector-button-ghost}
    border-color $brand-border
    color $brand-disabled

{$selector-button-loading}
  cursor $cursor-default
  opacity $ui-opacity-disabled

{$selector-button-block}
  ui-block()

  + {$selector-button-block}
    margin-left 0
    margin-top $ui-vertical-gap

{$selector-button-group}
  display inline-block
  ui-button-group()

  {$selector-button-dashed}:before
    border-style dashed

{$selector-button}:before
  border-style solid
  border-color transparent

{$selector-button-primary} + {$selector-button-primary}
  &:before
    border-color $button-group-separator-color

{$selector-button-group-horizontal}
  > {$selector-button}

    + {$selector-button}
      margin-left 0
      border-left none

    &:first-child:not(:last-child)
      border-top-right-radius 0
      border-bottom-right-radius 0

    &:last-child:not(:first-child)
      border-top-left-radius 0
      border-bottom-left-radius 0

    &:not(:first-child):not(:last-child)
      border-radius 0

  > {$selector-button-enabled}
    position relative
    &:before
      content ''
      position absolute
      border-left-width 1px
      border-top none
      border-right none
      border-bottom none
      left -1px
      top -1px
      bottom -1px
      transition border-color .2s

    &:first-child:before
      content none

    &:hover,
    &:focus,
    &:active
      z-index 1

{$selector-button-group-vertical}
  > {$selector-button}
    display block
    width 100%

    + {$selector-button}
      margin-left 0px
      border-top none

    &:first-child:not(:last-child)
      border-bottom-left-radius 0
      border-bottom-right-radius 0

    &:last-child:not(:first-child)
      border-top-left-radius 0
      border-top-right-radius 0

    &:not(:first-child):not(:last-child)
      border-radius 0

  > {$selector-button-enabled}
    position relative
    &:before
      content ' '
      position absolute
      border-top-width 1px
      border-left none
      border-right none
      border-bottom none
      left -1px
      right -1px
      top -1px
      transition border-color .2s

    &:first-child:before
      content none

    &:hover,
    &:focus,
    &:active
      z-index 1

{$selector-button-group-round}
  > {$selector-button}

    &:first-child:not(:last-child)
      border-top-left-radius $border-radius-round
      border-bottom-left-radius $border-radius-round

    &:last-child:not(:first-child)
      border-top-right-radius $border-radius-round
      border-bottom-right-radius $border-radius-round
