{$selector-button}

  ui-button()

  display inline-block
  vertical-align middle
  text-align center
  user-select none
  white-space nowrap
  cursor pointer
  background-image none
  font-weight 400
  border 1px solid transparent

  transition color .2s ease-out,
    background-color .2s ease-out,
    border .2s ease-out,
    box-shadow .2s ease-out

  + {$selector-button}

    margin-left 10px

  {$selector-icon}

    vertical-align middle

{$selector-button-group}

  display inline-block
  vertical-align middle
  ui-button-group()

{$selector-button}-fluid

  ui-fluid()
