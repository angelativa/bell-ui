{$selector-alert}
  border 1px solid
  position relative
  box-sizing border-box
  border-radius $border-radius-default
  padding $alert-padding-vertical $alert-padding-horizontal
  transition opacity .3s

  ui-alert()

{$selector-alert-banner}
  border 0
  border-radius 0

{$selector-alert-center}
  text-align center

{$selector-alert-status-icon}
  font-size $alert-status-icon-size
  margin-top $alert-status-icon-margin-top

{$selector-alert-with-title}
  {$selector-alert-status-icon}
    font-size $alert-status-icon-size-with-title
    margin-top $alert-status-icon-margin-top-with-title

{$selector-alert-title}
  white-space nowrap
  font-size $font-size-default
  font-weight bold

  + {$selector-alert-content}
    font-size $alert-content-font-size
    margin-top $alert-title-content-gap

{$selector-alert-content}
  font-size $font-size-default
  line-height $ui-multiple-line-height
  font-weight normal

{$selector-alert-close}
  position absolute
  right $alert-padding-horizontal
  top $alert-padding-vertical

  user-select none
  text-align center
  font-size $alert-close-font-size
  line-height $ui-single-line-height
  cursor $cursor-clickable
  transition color .3s

{$selector-alert-close-icon}
  display inline-block
  font-size $alert-close-icon-font-size
  width $alert-close-icon-font-size

{$selector-alert-with-icon}
  display table

  > {$selector-alert-icon}
  > {$selector-alert-wrapper}
    display table-cell
    vertical-align top

  > {$selector-alert-icon}
    width 1px
    padding-right $alert-icon-wrapper-gap

  > {$selector-alert-wrapper}
    width 100%

{$selector-alert-with-close}
  {$selector-alert-title}
    margin-right $alert-close-icon-font-size + $ui-icon-text-gap
