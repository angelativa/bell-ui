{$selector-alert}
  border 1px solid
  position relative
  box-sizing border-box
  border-radius $radius-base
  padding $alert-padding-vertical $alert-padding-horizontal
  transition opacity .3s

  ui-alert()

{$selector-alert-hidden}
  opacity 0

{$selector-alert-center}
  text-align center

{$selector-alert-type-icon}
  font-size $alert-type-icon-size

{$selector-alert-with-content}
  {$selector-alert-type-icon}
    font-size $alert-type-icon-size-with-content

{$selector-alert-title}
  white-space nowrap
  font-size $alert-title-font-size

  + {$selector-alert-content}
    margin-top $alert-title-content-gap

{$selector-alert-content}
  font-size $alert-content-font-size
  line-height 1.6
  font-weight normal

{$selector-alert-close}
  position absolute
  right $alert-padding-horizontal
  top $alert-padding-vertical

  text-align center
  font-size $alert-close-font-size
  color $brand-close-color
  cursor $cursor-clickable
  transition color .3s

  &:hover
    color $brand-close-color-hover

{$selector-alert-close-icon}
  display inline-block
  font-size $alert-close-icon-font-size
  width $alert-close-icon-font-size
  margin-top $alert-close-icon-margin-top

{$selector-alert-with-icon}
  display table

  > {$selector-alert-icon}
  > {$selector-alert-wrapper}
    display table-cell
    vertical-align middle

  > {$selector-alert-icon}
    padding-right $alert-icon-wrapper-gap

  > {$selector-alert-wrapper}
    width 100%

{$selector-alert-with-close}
  {$selector-alert-title}
    margin-right $alert-close-icon-font-size + $ui-label-gap
