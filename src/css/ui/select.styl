{$selector-select}

    display inline-block
    box-sizing border-box
    user-select none
    text-align left
    width 100%
    position relative

    ui-scrollbar()

    ui-select()

    &{$selector-active}

        {$selector-select}-arrow

            transform rotate(180deg)

    &{$selector-select}-multiple

        {$selector-select}-value,
        {$selector-select}-placeholder

            white-space normal
            line-height 1.8


    {$selector-select-button}

        width 100%
        display inline-block
        position relative
        outline 0
        cursor pointer
        border-radius $radius-base
        transition border-color .3s, box-shadow .3s

        {$selector-select}-arrow

            position absolute
            right 0
            top 0
            font-size 14px
            color $brand-muted
            transform-origin center
            transition transform .3s

        {$selector-select}-value,
        {$selector-select}-placeholder

            display block
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            color $brand-muted

            &.bell-hide

                display none

        {$selector-select}-value

            color $brand-main

    &{$selector-select}-disabled

        {$selector-select}-button

            cursor not-allowed
            background-color $brand-bg-disabled

            &{$selector-hover}

                border-color $brand-border

    &{$selector-select}-top

        {$selector-prefix}-dropdown-list

            top auto

        {$selector-select}-button

            {$selector-select}-arrow

                transform rotate(180deg)

        &{$selector-active}

            {$selector-select}-arrow

                transform rotate(0)
