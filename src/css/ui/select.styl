{$selector-select-button}

  position relative
  cursor $cursor-clickable
  border 1px solid $brand-border
  background-color $brand-bg

  box-sizing border-box
  border-radius $radius-base
  transition border-color .3s, box-shadow .3s

  &:hover
    border-color $brand-primary

{$selector-select-active}
  > {$selector-select-button}
    border-color $brand-primary
    if $ui-shadow-radius > 0
      box-shadow 0 0 0 $ui-shadow-radius $brand-primary-shadow

{$selector-select-value},
{$selector-select-placeholder}
  display inline-block
  ui-ellipsis()
  height 100%
  max-width 90%
  padding-left $select-button-padding-left
  padding-right $select-arrow-width

{$selector-select-placeholder}
  color $brand-muted

{$selector-select-value}
  color $brand-important

  > {$selector-tag}
    margin 0px 4px 3px 0

{$selector-select-arrow},
{$selector-select-clear-icon}
  position absolute
  top 0
  bottom 0
  right 0
  width $select-arrow-width
  text-align center

{$selector-select-arrow}
  color $select-arrow-color
  transform-origin center
  transition transform .3s

{$selector-select-clear-icon}
  color $select-clear-color
  display none

{$selector-select-active}
  > {$selector-dropdown-list}
    max-height $select-dropdown-list-height
    if $select-dropdown-list-padding-vertical > 0
      padding-top $select-dropdown-list-padding-vertical
      padding-bottom $select-dropdown-list-padding-vertical

  {$selector-select-arrow}
    transform rotate(-180deg)

{$selector-select-option}
  cursor $cursor-clickable
  line-height 1
  transition background-color .3s, color .3s
  &:hover
    background-color $select-option-bg-hover

{$selector-select-option-active}
  color $brand-primary
  background-color $select-option-bg-hover

{$selector-select-option-title}
  color $select-option-title-text-color
  line-height 1

{$selector-select-disabled}
  > {$selector-select-button}
    background-color $brand-bg-disabled
    border-color $brand-border-disabled
    cursor $cursor-disabled

    &:hover
      border-color $brand-border-disabled

    {$selector-select-placeholder},
    {$selector-select-value}
      color $brand-text-disabled


{$selector-select-clearable}
  > {$selector-select-button}:hover
    {$selector-select-arrow}
      display none
    {$selector-select-clear-icon}
      display block


{$selector-select-top}
  > {$selector-dropdown-list}
    bottom 100%
    margin-bottom $ui-shadow-radius + $select-dropdown-list-gap

  > {$selector-select-button}
    > {$selector-select-arrow}
      transform rotate(-180deg)

  &{$selector-select-active}
    {$selector-select-arrow}
      transform rotate(0)

{$selector-select-bottom}
  > {$selector-dropdown-list}
    margin-top $ui-shadow-radius + $select-dropdown-list-gap

{$selector-select-prefix}
  margin-left $select-button-padding-left
  line-height 1
  display inline-block
  vertical-align top

{$selector-select}
  display inline-block
  user-select none
  text-align left
  width 100%
  position relative

  ui-scrollbar()

  > {$selector-dropdown-list}
    min-width 100%

  ui-select()
