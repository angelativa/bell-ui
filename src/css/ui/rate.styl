{$selector-rate}
  display inline-block
  ui-rate()

{$selector-rate-icon-full}
  color $rate-icon-color
  display inline-block
  line-height 1
  position relative
  transition color .3s

  + {$selector-rate-icon-full}
    margin-left $rate-icon-gap

{$selector-rate-icon-half}
  position absolute
  left 0
  top 0
  width 50%
  height 100%
  overflow hidden
  line-height 1
  opacity 0
  transition opacity .3s

  &{$selector-rate-icon-active}
    opacity 1

{$selector-rate-text}
  margin-left $rate-icon-gap
  font-size $font-size-default
  color $brand-content
  vertical-align top

{$selector-rate-live}
  > {$selector-rate-icon-full}
    cursor $cursor-clickable