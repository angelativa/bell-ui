$selector-tag = $selector-prefix + '-tag'
$selector-tag-dot = $selector-tag + '-dot'
$selector-tag-close-icon = $selector-tag + '-close-icon'
$selector-tag-simple = $selector-tag + '-simple'
$selector-tag-bordered = $selector-tag + '-bordered'
$selector-tag-checked = $selector-tag + '-checked'
$selector-tag-checkable = $selector-tag + '-checkable'
$selector-tag-closable = $selector-tag + '-closable'

$tag-close-font-size = 20px
$tag-dot-color = #ccc

$tag-size-hash = {
  default: {
    height: 26px,
    font-size: 12px,
    dot-size: 8px,
    close-width: 24px,
    padding-horizontal: 8px,
  },
  large: {
    height: 32px,
    font-size: 14px,
    dot-size: 10px,
    close-width: 34px,
    padding-horizontal: 12px,
  }
}

$tag-brand-hash = {
  primary: {
    color: $brand-primary,
    hover-color: $brand-primary-hover,
    text-color: $brand-white,
  },
  success: {
    color: $brand-success,
    hover-color: $brand-success-hover,
    text-color: $brand-white,
  },
  error: {
    color: $brand-error,
    hover-color: $brand-error-hover,
    text-color: $brand-white,
  },
  info: {
    color: $brand-info,
    hover-color: $brand-info-hover,
    text-color: $brand-white,
  },
  warning: {
    color: $brand-warning,
    hover-color: $brand-warning-hover,
    text-color: $brand-white,
  },
}
