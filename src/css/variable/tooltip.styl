$selector-tooltip = $selector-prefix + '-tooltip'
$selector-tooltip-visible = $selector-tooltip + '-visible'
$selector-tooltip-hover = $selector-tooltip + '-hover'

$selector-tooltip-disabled = $selector-tooltip + '-disabled'

$selector-tooltip-popup = $selector-tooltip + '-popup'
$selector-tooltip-arrow = $selector-tooltip + '-arrow'
$selector-tooltip-content = $selector-tooltip + '-content'

$tooltip-font-size = 12px
$tooltip-max-width = 250px
$tooltip-padding = 8px 12px
$tooltip-color = $brand-white
$tooltip-bg-color = rgba(0,0,0,0.6)
$tooltip-box-shadow = 0 1px 6px rgba(0,0,0,.2)
$tooltip-padding-inner = 8px

$tooltip-arrow-offset = -2px
// 箭头与 tooltip 两侧的距离
$tooltip-arrow-gap = 10px
$tooltip-arrow-size = 5px
