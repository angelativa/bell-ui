$selector-layout = $selector-prefix + '-layout'
$selector-layout-header = $selector-layout + '-header'
$selector-layout-sider = $selector-layout + '-sider'
$selector-layout-has-sider = $selector-prefix + '-layout-has-sider'
$selector-layout-fixed = $selector-layout + '-fixed'

$layout-hash = {
  header: {
    flex: 0 0 64px,
    line-height: 64px,
    padding: 0 50px,
    background-color: $brand-primary,
    color: #fff
  },
  content: {
    flex: auto
  },
  footer: {
    flex: 0 0 auto,
    background-color: #f5f7f9,
    padding: 24px 50px,
    color: #515a6e
  },
  sider: {
    flex: 0 0 200px,
    background-color: #515a6e
  },
  sider-collapsed: {
    flex: 0 0 80px,
    background-color: #515a6e
  },
  trigger: {
    color: #fff
  }
}