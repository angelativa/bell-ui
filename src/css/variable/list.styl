$selector-list = $selector-prefix + '-list'
$selector-list-item = $selector-list + '-item'

$list-border = 1px solid #d9d9d9
$list-border-radius = 4px

$list-size-hash = {
  '': {
    item-padding: 12px 16px,
    header-margin-right: 16px
  },
  'large': {
    item-padding: 16px 24px,
    header-margin-right: 24px
  },
  'small': {
    item-padding: 8px 15px,
    header-margin-right: 15px
  }
}

$list-color-hash = {
  '': {
    bg: $brand-bg,
    hover-bg: $brand-bg-hover,
    hover-color: $brand-secondary,
    active-bg: $brand-bg-hover,
    active-color: $brand-secondary
  },
  'success': {
    bg: $brand-bg,
    hover-bg: $brand-success,
    hover-color: $brand-bg,
    active-bg: $brand-success,
    active-color: $brand-bg
  },
  'info': {
    bg: $brand-bg,
