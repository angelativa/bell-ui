$selector-switch =  $selector-prefix + '-switch'
$selector-switch-button =  $selector-switch + '-button'

$switch-margin-gap = 8px
$switch-font-size = 12px
$switch-loading-zindex = $zindex-tiny
$switch-loading-left = 3px

$switch-inner-left = 8px

$switch-size-hash = {
  '' : {
    width: 44px,
    height: 22px,
    after-size: 18px,
    before-left: 25px
  },
  'small': {
    width: 28px,
    height: 16px,
    after-size: 12px,
    before-left: 15px
  },
  'large' : {
    width: 56px
    height: 22px,
    after-size: 18px,
    before-left: 37px
  }
}

$switch-brand-hash = {
  '': {
    active-color: $brand-primary
  },
  'success': {
    active-color: $brand-success
  },
  'error': {
    active-color: $brand-error
  },
  'warning': {
    active-color: $brand-warning
  },
  'danger': {
    active-color: $brand-danger
  },
  'info': {
    active-color: $brand-info
  }
}