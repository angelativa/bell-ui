$selector-switch =  $selector-prefix + '-switch'
$selector-switch-loading =  $selector-switch + '-loading'
$selector-switch-enabled =  $selector-switch + '-enabled'
$selector-switch-disabled =  $selector-switch + '-disabled'
$selector-switch-active =  $selector-switch + '-active'
$selector-switch-label =  $selector-switch + '-label'

$switch-loading-gap = 4px
$switch-thumb-gap = 2px
$switch-label-gap = 8px

$switch-label-font-size = 12px

$switch-size-hash = {
  'default' : {
    width: 44px,
    height: 22px,
    loading-size: 14px,
    thumb-size: 18px,
  },
  'small': {
    width: 28px,
    height: 16px,
    loading-size: 8px,
    thumb-size: 12px,
  },
  'large' : {
    width: 60px
    height: 26px,
    loading-size: 18px,
    thumb-size: 22px,
  }
}

$switch-brand-hash = {
  'primary': {
    color: $brand-primary,
  },
  'success': {
    color: $brand-success,
  },
  'error': {
    color: $brand-error,
  },
  'warning': {
    color: $brand-warning,
  },
  'info': {
    color: $brand-info,
  }
}