$selector-switch = '.bell-switch'
$selector-switch-button = '.bell-switch-button'

$switch-margin-left = 10px;
$switch-button-label-font-size = 12px;
$switch-button-label-top = 5px;
$switch-button-label-color = #fff;
$switch-button-label-on-left = 8px;
$switch-button-label-off-right = 8px;

$switch-size-hash = {
    '' : {
        width: 48px,
        height: 24px,
        border-radius: 24px,
        after-left: 25px,
        after-width: 20px,
        after-height: 20px
    },
    'small': {
        width: 24px,
        height: 14px,
        border-radius: 14px,
        after-left: 12px,
        after-width: 10px,
        after-height: 10px
    },
    'large': {
        width: 60px,
        height: 24px,
        border-radius: 24px,
        after-left: 37px,
        after-width: 20px,
        after-height: 20px
    }
}

$switch-brand-hash = {
    '': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-primary,
        active-bg-color: $brand-primary,
        after-bg-color: #fff
    },
    'success': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-success,
        active-bg-color: $brand-success,
        after-bg-color: #fff
    },
    'error': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-error,
        active-bg-color: $brand-error,
        after-bg-color: #fff
    },
    'warning': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-warning,
        active-bg-color: $brand-warning,
        after-bg-color: #fff
    },
    'danger': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-danger,
        active-bg-color: $brand-danger,
        after-bg-color: #fff
    },
    'info': {
        border: 1px solid #ccc,
        bg-color: #ccc,
        active-border-color: $brand-info,
        active-bg-color: $brand-info,
        after-bg-color: #fff
    },
    'disabled': {
        border: 1px solid $brand-border-disabled,
        bg-color: $brand-bg-disabled,
        active-border-color: $brand-border-disabled,
        active-bg-color: #fff,
        after-bg-color: $brand-border-disabled
    }
}