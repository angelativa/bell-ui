$selector-select = $selector-prefix + '-select'
$selector-select-enabled = $selector-select + '-enabled'
$selector-select-disabled = $selector-select + '-disabled'
$selector-select-multiple = $selector-select + '-multiple'
$selector-select-clearable = $selector-select + '-clearable'

$selector-select-prefix = $selector-select + '-prefix'
$selector-select-button = $selector-select + '-button'
$selector-select-button-with-prefix = $selector-select-button + '-with-prefix'
$selector-select-value = $selector-select + '-value'
$selector-select-values = $selector-select + '-values'
$selector-select-placeholder = $selector-select + '-placeholder'

$selector-select-prefix-icon = $selector-select + '-prefix-icon'
$selector-select-arrow-icon = $selector-select + '-arrow-icon'
$selector-select-clear-icon = $selector-select + '-clear-icon'

$selector-select-group-title = $selector-select + '-group-title'

$select-prefix-icon-color = #666
$select-arrow-icon-color = $brand-muted
$select-tag-color = #f6f6f6
$select-clear-icon-color = #999

$select-dropdown-list-height = 200px

$select-size-hash = {
  default: {
    height: $height-default,
    font-size: $font-size-default,
    button-padding-vertical: 4px,
    button-padding-horizontal: $padding-horizontal-default,
    tag-height: 22px,
    tag-gap-vertical: 4px,
    tag-gap-horizontal: 4px,
  },
  small: {
    height: $height-small,
    font-size: $font-size-small,
    button-padding-vertical: 2px,
    button-padding-horizontal: $padding-horizontal-small,
    tag-height: 20px,
    tag-gap-vertical: 2px,
    tag-gap-horizontal: 2px,
  },
  large: {
    height: $height-large,
    font-size: $font-size-large,
    button-padding-vertical: 7px,
    button-padding-horizontal: $padding-horizontal-large,
    tag-height: 28px,
    tag-gap-vertical: 6px,
    tag-gap-horizontal: 6px,
  }
}
