$selector-select = $selector-prefix + '-select'
$selector-select-disabled = $selector-select + '-disabled'
$selector-select-active = $selector-select + '-active'
$selector-select-multiple = $selector-select + '-multiple'
$selector-select-clearable = $selector-select + '-clearable'
$selector-select-top = $selector-select + '-top'
$selector-select-bottom = $selector-select + '-bottom'

$selector-select-prefix = $selector-select  + '-prefix'
$selector-select-button = $selector-select  + '-button'
$selector-select-value = $selector-select  + '-value'
$selector-select-placeholder = $selector-select  + '-placeholder'
$selector-select-arrow = $selector-select  + '-arrow'
$selector-select-clear-icon = $selector-select  + '-clear-icon'

$selector-select-option = $selector-select  + '-option'
$selector-select-option-title = $selector-select-option  + '-title'
$selector-select-option-active = $selector-select-option  + '-active'

$select-button-padding-right = 24px
$select-button-padding-left = 8px
$select-arrow-width = 30px
$select-arrow-color = $brand-muted
$select-clear-color = #808695

// 下拉框和按钮的间距
$select-dropdown-list-gap = 2px
// 下拉框的上下内边距
$select-dropdown-list-padding-vertical = 6px

$select-dropdown-list-height = 200px
$select-option-title-text-color = #999
$select-option-bg-hover = #f6f6f6

$select-size-hash = {
  'default': {
    height: 30px,
    font-size: 12px,
    group-padding: 8px,
    option-padding: 7px 16px
  },
  'small': {
    height: 22px,
    font-size: 12px,
    group-padding: 7px 8px,
    option-padding: 7px 16px
  },
  'large': {
    height: 34px,
    font-size: 14px,
    group-padding: 10px 8px,
    option-padding: 10px 16px
  }
}

