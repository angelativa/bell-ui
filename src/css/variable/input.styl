$selector-input-wrapper = $selector-prefix + '-input-wrapper'
$selector-input = $selector-prefix + '-input'
$selector-input-el = $selector-input + '-el'
$selector-input-prepend = $selector-input + '-prepend'
$selector-input-append = $selector-input + '-append'
$selector-textarea = $selector-prefix + '-textarea'

$input-el-color = $brand-main
$input-el-size = 14px
$input-el-placeholder-color = #D2D2D2

$input-prepend-size = 12px

$input-clearable-color = #808695

$input-size-hash = {
  '': 30px,
  'small': 22px,
  'large': 38px
}

$input-color-hash = {
  '': {
    color: #515a6e,
    bg-color: transparent,
    border-color: #dcdee2,
    border-hover-color: $brand-primary-hover,
    box-shadow: 0 0 0 2px rgba(45,140,240,.2)
  },
  'success': {
    color: #515a6e,
    bg-color: transparent,
    border-color: $brand-success-hover,
    border-hover-color: $brand-success-hover,
    box-shadow: 0 0 0 2px rgba(25,190,107,.2)
  },
  'error': {
    color: #515a6e,
    bg-color: transparent,
    border-color: $brand-error-hover,
    border-hover-color: $brand-error-hover,
    box-shadow: 0 0 0 2px rgba(237,64,20,.2)
  },
  'info': {
    color: #515a6e,
    bg-color: transparent,
    border-color: $brand-info-hover,
    border-hover-color: $brand-info-hover,
    box-shadow: 0 0 0 2px rgba(45,183,245,.2)
  },
  'warning': {
    color: #515a6e,
    bg-color: transparent,
    border-color: $brand-warning-hover,
    border-hover-color: $brand-warning-hover,
    box-shadow: 0 0 0 2px rgba(255,153,0,.2)
  },
  'disabled': {
    color: #ccc,
    bg-color: #F7F7F7,
    border-color: $brand-border-disabled,
    border-hover-color: $brand-border-disabled,
    box-shadow: none
  }
}