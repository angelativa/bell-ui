$selector-progress = $selector-prefix + '-progress'
$selector-progress-animated = $selector-progress + '-animated'
$selector-progress-horizontal = $selector-progress + '-horizontal'
$selector-progress-vertical = $selector-progress + '-vertical'
$selector-progress-inside = $selector-progress + '-inside'
$selector-progress-outside = $selector-progress + '-outside'
$selector-progress-with-text = $selector-progress + '-with-text'
$selector-progress-fluid = $selector-progress + '-fluid'
