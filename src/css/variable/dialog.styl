$selector-dialog = $selector-prefix + '-dialog'

$selector-dialog-open = $selector-dialog + '-open'
$selector-dialog-leave = $selector-dialog + '-leave'

$selector-dialog-mask = $selector-dialog + '-mask'
$selector-dialog-wrapper = $selector-dialog + '-wrapper'

$selector-dialog-title = $selector-dialog + '-title'
