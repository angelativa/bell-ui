$dialog-title-color = $brand-important
$dialog-title-font-size = 14px
$dialog-title-padding-vertical = 15px

$dialog-content-font-size = 12px
$dialog-content-padding-vertical = 20px

$dialog-actions-padding-vertical = 10px

$dialog-close-font-size = 22px
$dialog-close-top = $dialog-title-padding-vertical - 3
$dialog-close-right = $dialog-padding-horizontal
