    '': {
        bg-color: transparent,
        color: $brand-main,
        color-hover: $brand-primary,
        border-color: $brand-muted,
        border-color-hover: $brand-primary,
        box-shadow: 0 0 0 2px $brand-primary-box-shadow-color
    },
    'success': {
        bg-color: transparent,
        color: $brand-main,
        color-hover: $brand-success,
        border-color: $brand-muted,
        border-color-hover: $brand-success,
        box-shadow: 0 0 0 2px $brand-success-box-shadow-color
    },
    'warning': {
        bg-color: transparent,
        color: $brand-main,
        color-hover: $brand-warning,
        border-color: $brand-muted,
        border-color-hover: $brand-warning,
        box-shadow: 0 0 0 2px $brand-warning-box-shadow-color
    },
    'error': {
        bg-color: transparent,
        color: $brand-main,
        color-hover: $brand-error,
        border-color: $brand-muted,
        border-color-hover: $brand-error,
        box-shadow: 0 0 0 2px $brand-error-box-shadow-color
    },
    'danger': {
        bg-color: transparent,
        color: $brand-main,
        color-hover: $brand-danger,
        border-color: $brand-muted,
        border-color-hover: $brand-danger,
        box-shadow: 0 0 0 2px $brand-danger-box-shadow-color
    },
    'info': {
        bg-color: transparent,
        color: $brand-main,
