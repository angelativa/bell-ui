$selector-radio-button = '.bell-radio-button'

$radio-button-radius = 4px;
$radio-button-border-color = #ccc;

$radio-button-padding = 8px;
$radio-button-large-padding = 13px;
$radio-button-small-padding = 4px;

$radio-button-active-border-color = $brand-primary;
$radio-button-active-color = $brand-primary;

$radio-button-success-active-border-color = $brand-success;
$radio-button-success-active-color = $brand-success;
$radio-button-warning-active-border-color = $brand-warning;
$radio-button-warning-active-color = $brand-warning;
$radio-button-error-active-border-color = $brand-error;
$radio-button-error-active-color = $brand-error;
$radio-button-danger-active-border-color = $brand-danger;
$radio-button-danger-active-color = $brand-danger;
$radio-button-info-active-border-color = $brand-info;
$radio-button-info-active-color = $brand-info;

$radio-button-gap = 10px;
$radio-button-font-size = 13px;
$radio-button-large-font-size = 14px;
$radio-button-small-font-size = 12px;
$radio-button-disabled-border-color = #dddee1;
$radio-button-disabled-color = #ccc;
$radio-button-disabled-background-color = #f7f7f7;

$radio-button-brand-hash = {
    'success': {
        color: $radio-button-success-active-color,
        border-color: $radio-button-success-active-border-color
    },
    'warning': {
        color: $radio-button-warning-active-color,
        border-color: $radio-button-warning-active-border-color
    },
    'error': {
        color: $radio-button-error-active-color,
        border-color: $radio-button-error-active-border-color
    },
    'danger': {
        color: $radio-button-danger-active-color,
        border-color: $radio-button-danger-active-border-color
    },
    'info': {
        color: $radio-button-info-active-color,
        border-color: $radio-button-info-active-border-color
    },
}

$radio-button-size-hash = {
    '': {
        font: $radio-button-font-size,
        padding: $radio-button-padding
    },
    'large': {
        font: $radio-button-large-font-size,
        padding: $radio-button-large-padding
    },

    'small': {
        font: $radio-button-small-font-size,
        padding: $radio-button-small-padding
    }
}
