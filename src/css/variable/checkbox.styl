$selector-checkbox = $selector-prefix + '-checkbox'
$selector-checkbox-inner = $selector-checkbox + '-inner'
$selector-checkbox-input = $selector-checkbox + '-input'
$selector-checkbox-label = $selector-checkbox + '-label'
$selector-checkbox-wrapper = $selector-checkbox + '-wrapper'

$checkbox-font-size = 12px
$checkbox-gap = 8px
$checkbox-inner-size = 14px

$checkbox-brand-hash = {
  '': {
    color-active: $brand-primary,
    box-shadow: 0 0 0 2px rgba(45,140,240, .2),
    color: $brand-main
  },
  'success': {
    color-active: $brand-success,
    box-shadow: 0 0 0 2px rgba(25,190,107,.2),
    color: $brand-main
  },
  'info': {
    color-active: $brand-info,
    box-shadow: 0 0 0 2px rgba(45,183,245,.2),
    color: $brand-main
  },
  'error': {
    color-active: $brand-error,
    box-shadow: 0 0 0 2px rgba(237,64,20,.2),
    color: $brand-main
  },
  'warning': {
    color-active: $brand-warning,
    box-shadow: 0 0 0 2px rgba(255,153,0,.2),
    color: $brand-main
  },
  'disabled': {
    color-active: $brand-border-disabled,
    box-shadow: none,
    color: #ccc
  }
}

$checkbox-size-hash = {
