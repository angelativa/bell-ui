$selector-text = $selector-prefix + '-text'
$selector-text-bold = $selector-text + '-bold'
$selector-text-block = $selector-text + '-block'

$text-brand-hash = {
  white: $brand-white,
  primary: $brand-primary,
  success: $brand-success,
  error: $brand-error,
  info: $brand-info,
  warning: $brand-warning,
  title: $brand-title,
  content: $brand-content,
  muted: $brand-muted,
}

$text-size-hash = {
  default: {
    font-size: $font-size-default,
    line-height: 1.477,
  },
  small: {
    font-size: $font-size-small,
    line-height: 1.333
  },
  large: {
    font-size: $font-size-large,
    line-height: 1.625
  },
}
