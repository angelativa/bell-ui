$selector-input-number = $selector-prefix + '-input-number'
$selector-input-number-enabled = $selector-input-number + '-enabled'
$selector-input-number-disabled = $selector-input-number + '-disabled'
$selector-input-number-focus = $selector-input-number + '-focus'
$selector-input-number-up = $selector-input-number + '-up'
$selector-input-number-down = $selector-input-number + '-down'
$selector-input-number-el = $selector-input-number + '-el'
$selector-input-number-actions = $selector-input-number + '-actions'

$input-number-width = 90px

$input-number-el-placeholder-color = #D2D2D2
$input-number-el-padding = 0 7px

$input-number-actions-border-color = $brand-border
$input-number-actions-color = #999
$input-number-actions-bg-color = #fff
$input-number-actions-width = 22px

$input-number-size-hash = {
  'default': {
    height: 30px,
    font-size: 13px,
  },
  'small': {
    height: 22px,
    font-size: 12px,
  }
  'large': {
    height: 38px,
    font-size: 15px,
  }
}

$input-number-brand-hash = {
  'primary': {
    hover-color: $brand-primary-hover,
    shadow-color: $brand-primary-shadow,
  },
  'success': {
    hover-color: $brand-success-hover,
    shadow-color: $brand-success-shadow,
  },
  'error': {
    hover-color: $brand-error-hover,
    shadow-color: $brand-error-shadow,
  },
  'info': {
    hover-color: $brand-info-hover,
    shadow-color: $brand-info-shadow,
  },
  'warning': {
    hover-color: $brand-warning-hover,
    shadow-color: $brand-warning-shadow,
  },
}
