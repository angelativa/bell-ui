$selector-link = $selector-prefix + '-link'
$selector-link-underline = $selector-link + '-underline'
$selector-link-disabled = $selector-link + '-disabled'
$selector-link-enabled = $selector-link + '-enabled'

$link-brand-hash = {
  white: $brand-white,
  primary: $brand-primary,
  success: $brand-success,
  error: $brand-error,
  info: $brand-info,
  warning: $brand-warning,
  title: $brand-title,
  content: $brand-content,
  muted: $brand-muted,
}

$link-size-hash = {
  default: {
    font-size: $font-size-default,
    line-height: 1.477,
  },
  small: {
    font-size: $font-size-small,
    line-height: 1.333
  },
  large: {
    font-size: $font-size-large,
    line-height: 1.625
  },
}
