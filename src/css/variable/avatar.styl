$selector-avatar = $selector-prefix + '-avatar'
$selector-avatar-text = $selector-avatar + '-text'

$avatar-bg = #ccc
$avatar-margin-left = 10px

$avatar-border-radius = 4px

$avatar-size-hash = {
  '': {
    size: 32px,
    icon-size: 26px
  },
  'tiny': {
    size: 20px,
    icon-size: 14px
  },
  'small': {
    size: 24px,
    icon-size: 18px
  },
  'large': {
    size: 44px,
    icon-size: 34px
  },
  'huge': {
    size: 60px,
    icon-size: 40px
  }
}

