$selector-button-ghost = $selector-button + '-ghost'
$selector-button-link = $selector-button + '-link'
$selector-button-dashed = $selector-button + '-dashed'
$selector-button-circle = $selector-button + '-circle'
$selector-button-round = $selector-button + '-round'
$selector-button-block = $selector-button + '-block'

$selector-button-pure = $selector-button + '-pure'
$selector-button-primary = $selector-button + '-primary'
$selector-button-loading = $selector-button + '-loading'
