$selector-radio-group = '.bell-radio-group'
$selector-radio = '.bell-radio'
$selector-active = '.bell-active'

$radio-font-size = 12px;
$radio-margin-right = 8px;

$radio-inner-width = 14px;
$radio-background-color = #fff;
$radio-inner-border-color = #d7dde4;
$radio-inner-hover-border-color = #bcbcbc;

$radio-inner-after-width = 8px;
$radio-inner-after-margin-left = -4px;
$radio-inner-color = #fff;
$radio-label-margin-left = 4px;

$radio-active-background-color = $brand-primary;
$radio-inner-active-border-color = $brand-primary;

$radio-success-active-background-color = $brand-success;
$radio-success-inner-active-border-color = $brand-success;
$radio-warning-active-background-color = $brand-warning;
$radio-warning-inner-active-border-color = $brand-warning;
$radio-error-active-background-color = $brand-error;
$radio-error-inner-active-border-color = $brand-error;

$radio-inner-disabled-background-color = #f3f3f3;
$radio-inner-after-disabled-background-color = #ccc;
$radio-inner-disabled-border-color = #dddee1;

$radio-brand-hash = {
    'success': {
        bg-color: $radio-success-active-background-color,
        border-color: $radio-success-inner-active-border-color
    },
    'warning': {
        bg-color: $radio-warning-active-background-color,
        border-color: $radio-warning-inner-active-border-color
    },
    'error': {
        bg-color: $radio-error-active-background-color,
        border-color: $radio-error-inner-active-border-color
    },
    'danger': {
        bg-color: $radio-danger-active-background-color,
        border-color: $radio-danger-inner-active-border-color
    },
    'info': {
        bg-color: $radio-info-active-background-color,
        border-color: $radio-info-inner-active-border-color
    }
}