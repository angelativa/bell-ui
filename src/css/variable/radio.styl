$selector-radio = $selector-prefix + '-radio'
$selector-radio-icon = $selector-radio + '-icon'
$selector-radio-input = $selector-radio + '-input'
$selector-radio-focus = $selector-radio + '-focus'
$selector-radio-active = $selector-radio + '-active'
$selector-radio-enabled = $selector-radio + '-enabled'
$selector-radio-disabled = $selector-radio + '-disabled'

$selector-radio-group = $selector-radio + '-group'
$selector-radio-vertical = $selector-radio + '-vertical'

$radio-brand-hash = {
  success: {
    color: $brand-success,
    shadow-color: $brand-success-shadow,
  },
  warning: {
    color: $brand-warning,
    shadow-color: $brand-warning-shadow,
  },
  error: {
    color: $brand-error,
    shadow-color: $brand-error-shadow,
  },
  info: {
    color: $brand-info,
    shadow-color: $brand-info-shadow,
  }
}

$radio-size-hash = {
  default: {
    height: $height-default,
    font-size: $font-size-default,
    padding-horizontal: $padding-horizontal-default,
  },
  large: {
    height: $height-large,
    font-size: $font-size-large,
    padding-horizontal: $padding-horizontal-large,
  },
  small: {
    height: $height-small,
    font-size: $font-size-small,
    padding-horizontal: $padding-horizontal-small,
  },
}