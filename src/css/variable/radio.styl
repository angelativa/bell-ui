$selector-radio = $selector-prefix + '-radio'
$selector-radio-group = $selector-radio + '-group'

$radio-inner-size = 16px
$radio-label-padding-left = 24px
$radio-font-size = 12px
$radio-wrapper-margin-top = 4px
$radio-margin-gap = 10px
$radio-height = 30px

$radio-border-color = #dcdee2

$radio-brand-hash = {
  '': {
    bg-color: $brand-bg,
    hover-color: $brand-primary,
    active-color: $brand-primary-active,
    box-shadow: 0 0 0 2px rgba(45,140,240, .2)
  },
  'success': {
    bg-color: $brand-bg,
    hover-color: $brand-success,
    active-color: $brand-success-active,
    box-shadow: 0 0 0 2px rgba(25,190,107,.2)
  },
  'warning': {
    bg-color: $brand-bg,
    hover-color: $brand-warning,
    active-color: $brand-warning-active,
    box-shadow: 0 0 0 2px rgba(255,153,0,.2)
  },
  'error': {
    bg-color: $brand-bg,
    hover-color: $brand-error,
    active-color: $brand-error-active,
    box-shadow: 0 0 0 2px rgba(237,64,20,.2)
  },
  'info': {
    bg-color: $brand-bg,
    hover-color: $brand-info,
    active-color: $brand-info-active,
    box-shadow: 0 0 0 2px rgba(45,183,245,.2)
  },
  'disabled': {
    bg-color: #f3f3f3,
    hover-color: $brand-border,
    active-color: $brand-border,
    box-shadow: none
  }
}