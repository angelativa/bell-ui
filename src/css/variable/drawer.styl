$selector-drawer-header = $selector-drawer + '-header'
$selector-drawer-title = $selector-drawer + '-title'
$selector-drawer-mask = $selector-drawer + '-mask'
$selector-drawer-hidden = $selector-drawer + '-hidden'

$drawer-position-hash = {
  'top': {
    top: 0px,
    left: 0px,
    right: 0px,
  },
  'left': {
    top: 0px,
    left: 0px,
    bottom: 0px,
  }
  'right': {
    top: 0px,
    right: 0px,
    bottom: 0px,
  },
  'bottom': {
    bottom: 0px,
    left: 0px,
    right: 0px,
  }
}

$drawer-shadow = 0 4px 12px rgba(0,0,0,.15)
$drawer-border-color = #e8e8e8
$drawer-padding = 16px 24px
$drawer-title-size = 16px 
