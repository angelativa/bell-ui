$selector-badge = $selector-prefix + '-badge'
$selector-badge-status = $selector-badge + '-status'

$selector-badge-count = $selector-badge + '-count'
$selector-badge-dot = $selector-badge + '-dot'

$badge-dot-size = 6px
$badge-box-shadow = 0 0 0 1px #ffffff
$badge-radius = 10px
$badge-color = #ffffff
$badge-padding = 3px 6px
$badge-font-size = 12px

$badge-brand-hash = {
  'error': {
    color: $brand-error
  },
  'success': {
    color: $brand-success
  },
  'info': {
    color: $brand-info
  },
  'primary': {
    color: $brand-error
  },
  'warning': {
    color: $brand-warning
  }
}