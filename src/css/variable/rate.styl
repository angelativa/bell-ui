$selector-rate = $selector-prefix + '-rate'
$selector-rate-star-full = $selector-prefix + '-rate-star-full'
$selector-rate-star-content = $selector-prefix + '-rate-star-content'
$selector-rate-text = $selector-prefix + '-rate-text'

$selector-rate-font-size = 20px
$selector-rate-hover-font-size = 21px
$selector-rate-star-box-size = 21px
$selector-rate-margin-gap = 2px
$selector-rate-text-font-size = 12px
$selector-rate-height = 32px
$rate-color = #e9e9e9
$rate-text-color = #515a6e

$rate-color-hash = {
  '': {
    active-color: $brand-primary
  },
  'success': {
    active-color: $brand-success
  },
  'error': {
    active-color: $brand-error
  },
  'info': {
    active-color: $brand-info
  },
  'warning': {
    active-color: $brand-warning
  },
  'danger': {
    active-color: $brand-danger
  },
  'disabled': {
    active-color: $brand-text-disabled
  }
}