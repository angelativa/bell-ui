{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",

    "outDir": "./dist/",
    "moduleResolution": "node",

    "allowJs": true,
    "sourceMap": true,

    "esModuleInterop": true,

    "typeRoots": [
      "node_modules/yox/js/yox/src"
    ]
  },
  "include": [
    "src/**/*.ts",
    "node_module/yox/**/*.ts",
    "./type/image.d.ts",
    "./type/style.d.ts",
    "./type/template.d.ts",
    "src/components/util.js", "src/components/constant.js"
  ]
}